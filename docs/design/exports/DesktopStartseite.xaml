<Page
    x:Class="Heimatplatz.Views.DesktopStartseitePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8FAFC">

    <Grid x:Name="RootGrid">
        <!-- Header -->
        <Border x:Name="Header"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                Height="64"
                VerticalAlignment="Top">
            <Grid Margin="79,0,0,0">
                <TextBlock Text="ImmoOÖ"
                           FontFamily="Inter"
                           FontWeight="Bold"
                           FontSize="28"
                           Foreground="Black"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,80,0"
                            Spacing="40">
                    <TextBlock Text="Immobilien anbieten"
                               FontFamily="Inter"
                               FontWeight="Medium"
                               FontSize="14"
                               Foreground="Black"/>
                    <TextBlock Text="Anmelden"
                               FontFamily="Inter"
                               FontWeight="Medium"
                               FontSize="14"
                               Foreground="Black"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Location Picker -->
        <Border x:Name="LocationPicker"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                Height="44"
                Width="280"
                CornerRadius="6"
                Margin="80,96,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBlock Text="Ort auswählen ▼"
                       FontFamily="Inter"
                       FontWeight="Medium"
                       FontSize="14"
                       Foreground="#334155"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Filter Chips -->
        <StackPanel x:Name="FilterChips"
                    Orientation="Horizontal"
                    Spacing="12"
                    Margin="80,160,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">

            <!-- Chip - Grundstück (Selected) -->
            <Border Background="Black"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12,8">
                <TextBlock Text="Grundstück"
                           FontFamily="Inter"
                           FontWeight="Medium"
                           FontSize="14"
                           Foreground="White"/>
            </Border>

            <!-- Chip - Zwangsversteigerung -->
            <Border Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12,8">
                <TextBlock Text="Zwangsversteigerung"
                           FontFamily="Inter"
                           FontWeight="Medium"
                           FontSize="14"
                           Foreground="#334155"/>
            </Border>

            <!-- Chip - Haus -->
            <Border Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12,8">
                <TextBlock Text="Haus"
                           FontFamily="Inter"
                           FontWeight="Medium"
                           FontSize="14"
                           Foreground="#334155"/>
            </Border>
        </StackPanel>

        <!-- Cards Grid -->
        <StackPanel x:Name="CardsGrid"
                    Orientation="Horizontal"
                    Spacing="24"
                    Margin="80,220,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">

            <!-- Card 1 -->
            <Border Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Width="400"
                    Height="320">
                <Grid>
                    <Border Background="#E0E0E0"
                            Height="180"
                            VerticalAlignment="Top"
                            Margin="-1,-1,-1,0"/>
                    <StackPanel Margin="15,195,0,0" VerticalAlignment="Top">
                        <Grid>
                            <TextBlock Text="€ 349.000"
                                       FontFamily="Inter"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Foreground="Black"/>
                            <TextBlock Text="145 m²"
                                       FontFamily="Inter"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Foreground="#0F172A"
                                       HorizontalAlignment="Left"
                                       Margin="264,0,0,0"/>
                        </Grid>
                        <TextBlock Text="Einfamilienhaus in Linz-Urfahr"
                                   FontFamily="Inter"
                                   FontSize="14"
                                   Foreground="#666666"
                                   Margin="0,6,0,0"/>
                        <Border Background="#F1F5F9"
                                CornerRadius="6"
                                Height="24"
                                Width="200"
                                HorizontalAlignment="Left"
                                Margin="0,49,0,0">
                            <TextBlock Text="Mustermann Immobilien"
                                       FontFamily="Inter"
                                       FontWeight="Medium"
                                       FontSize="12"
                                       Foreground="#64748B"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="145 m² · 5 Zimmer · Haus"
                                   FontFamily="Inter"
                                   FontSize="12"
                                   Foreground="#999999"
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Card 2 -->
            <Border Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Width="400"
                    Height="320">
                <Grid>
                    <Border Background="#E0E0E0"
                            Height="180"
                            VerticalAlignment="Top"
                            Margin="-1,-1,-1,0"/>
                    <StackPanel Margin="15,195,0,0" VerticalAlignment="Top">
                        <Grid>
                            <TextBlock Text="€ 189.000"
                                       FontFamily="Inter"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Foreground="Black"/>
                            <TextBlock Text="280 m²"
                                       FontFamily="Inter"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Foreground="#0F172A"
                                       HorizontalAlignment="Left"
                                       Margin="264,0,0,0"/>
                        </Grid>
                        <TextBlock Text="Baugrundstück in Wels"
                                   FontFamily="Inter"
                                   FontSize="14"
                                   Foreground="#666666"
                                   Margin="0,6,0,0"/>
                        <TextBlock Text="850 m² · Grundstück"
                                   FontFamily="Inter"
                                   FontSize="12"
                                   Foreground="#999999"
                                   Margin="0,6,0,0"/>
                        <Border Background="#F1F5F9"
                                CornerRadius="6"
                                Height="24"
                                Width="80"
                                HorizontalAlignment="Left"
                                Margin="0,19,0,0">
                            <TextBlock Text="Privat"
                                       FontFamily="Inter"
                                       FontWeight="Medium"
                                       FontSize="12"
                                       Foreground="#64748B"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Card 3 -->
            <Border Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Width="400"
                    Height="320">
                <Grid>
                    <Border Background="#E0E0E0"
                            Height="180"
                            VerticalAlignment="Top"
                            Margin="-1,-1,-1,0"/>
                    <StackPanel Margin="15,195,0,0" VerticalAlignment="Top">
                        <Grid>
                            <TextBlock Text="€ 520.000"
                                       FontFamily="Inter"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Foreground="Black"/>
                            <TextBlock Text="95 m²"
                                       FontFamily="Inter"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Foreground="#0F172A"
                                       HorizontalAlignment="Left"
                                       Margin="264,0,0,0"/>
                        </Grid>
                        <TextBlock Text="Villa in Gmunden am Traunsee"
                                   FontFamily="Inter"
                                   FontSize="14"
                                   Foreground="#666666"
                                   Margin="0,6,0,0"/>
                        <TextBlock Text="220 m² · 7 Zimmer · Villa"
                                   FontFamily="Inter"
                                   FontSize="12"
                                   Foreground="#999999"
                                   Margin="0,6,0,0"/>
                        <Border Background="#F1F5F9"
                                CornerRadius="6"
                                Height="24"
                                Width="150"
                                HorizontalAlignment="Left"
                                Margin="0,19,0,0">
                            <TextBlock Text="Beispiel Makler GmbH"
                                       FontFamily="Inter"
                                       FontWeight="Medium"
                                       FontSize="12"
                                       Foreground="#64748B"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Button Mehr laden -->
        <Button x:Name="ButtonMehrLaden"
                Content="Mehr laden"
                Background="Black"
                Foreground="White"
                FontFamily="Inter"
                FontWeight="SemiBold"
                FontSize="16"
                Height="48"
                Width="200"
                CornerRadius="6"
                Margin="0,580,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>
    </Grid>
</Page>
