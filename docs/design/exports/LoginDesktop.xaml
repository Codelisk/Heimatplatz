<Page
    x:Class="Heimatplatz.Views.LoginDesktopPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8FAFC">

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="720"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Form -->
        <Border Grid.Column="0"
                Background="White">
            <Grid Margin="80,0,80,0">
                <!-- Logo -->
                <TextBlock Text="ImmoOÖ"
                           FontFamily="Inter"
                           FontWeight="Bold"
                           FontSize="24"
                           Foreground="Black"
                           VerticalAlignment="Top"
                           Margin="0,80,0,0"/>

                <!-- Form Content -->
                <StackPanel VerticalAlignment="Top" Margin="0,300,0,0">
                    <!-- Title -->
                    <TextBlock Text="Willkommen zurück"
                               FontFamily="Inter"
                               FontWeight="Bold"
                               FontSize="40"
                               Foreground="Black"/>

                    <!-- Subtitle -->
                    <TextBlock Text="Melden Sie sich an, um Ihre Favoriten zu sehen"
                               FontFamily="Inter"
                               FontSize="16"
                               Foreground="#666666"
                               Margin="0,16,0,0"/>

                    <!-- Email Label -->
                    <TextBlock Text="E-Mail"
                               FontFamily="Inter"
                               FontWeight="Medium"
                               FontSize="14"
                               Foreground="Black"
                               Margin="0,48,0,0"/>

                    <!-- Email Input -->
                    <Border Background="#F5F5F5"
                            CornerRadius="8"
                            Height="52"
                            Width="400"
                            HorizontalAlignment="Left"
                            Margin="0,8,0,0">
                        <TextBox PlaceholderText="max.mustermann@email.at"
                                 FontFamily="Inter"
                                 FontSize="14"
                                 Foreground="Black"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalAlignment="Center"
                                 Margin="16,0,16,0"/>
                    </Border>

                    <!-- Password Label -->
                    <TextBlock Text="Passwort"
                               FontFamily="Inter"
                               FontWeight="Medium"
                               FontSize="14"
                               Foreground="Black"
                               Margin="0,24,0,0"/>

                    <!-- Password Input -->
                    <Border Background="#F5F5F5"
                            CornerRadius="8"
                            Height="52"
                            Width="400"
                            HorizontalAlignment="Left"
                            Margin="0,8,0,0">
                        <PasswordBox PlaceholderText="••••••••"
                                     FontFamily="Inter"
                                     FontSize="14"
                                     Foreground="Black"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalAlignment="Center"
                                     Margin="16,0,16,0"/>
                    </Border>

                    <!-- Forgot Password -->
                    <TextBlock Text="Passwort vergessen?"
                               FontFamily="Inter"
                               FontWeight="Medium"
                               FontSize="14"
                               Foreground="Black"
                               HorizontalAlignment="Left"
                               Margin="260,16,0,0"/>

                    <!-- Login Button -->
                    <Button x:Name="LoginButton"
                            Content="Anmelden"
                            Background="Black"
                            Foreground="White"
                            FontFamily="Inter"
                            FontWeight="SemiBold"
                            FontSize="16"
                            Height="56"
                            Width="400"
                            CornerRadius="8"
                            Margin="0,40,0,0"
                            HorizontalAlignment="Left"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"/>

                    <!-- Register Link -->
                    <TextBlock Text="Noch kein Konto? Registrieren"
                               FontFamily="Inter"
                               FontSize="14"
                               Foreground="#666666"
                               HorizontalAlignment="Left"
                               Margin="90,32,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Panel - Hero -->
        <Border Grid.Column="1"
                Background="Black">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="Finden Sie Ihr"
                           FontFamily="Inter"
                           FontWeight="Bold"
                           FontSize="48"
                           Foreground="White"/>
                <TextBlock Text="Traumhaus"
                           FontFamily="Inter"
                           FontWeight="Bold"
                           FontSize="48"
                           Foreground="White"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
