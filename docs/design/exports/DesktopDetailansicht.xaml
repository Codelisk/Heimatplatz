<Page
    x:Class="Heimatplatz.Views.DesktopDetailansichtPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8FAFC">

    <Grid x:Name="RootGrid">
        <!-- Header -->
        <Border x:Name="Header"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                Height="64"
                VerticalAlignment="Top">
            <Grid Margin="79,0,0,0">
                <TextBlock Text="ImmoOÖ"
                           FontFamily="Inter"
                           FontWeight="Bold"
                           FontSize="20"
                           Foreground="Black"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                <TextBlock Text="← Zurück zur Suche"
                           FontFamily="Inter"
                           FontSize="14"
                           Foreground="Black"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="80,0,0,0"/>
            </Grid>
        </Border>

        <!-- Content Container -->
        <Grid x:Name="ContentContainer"
              Margin="80,96,80,0"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="720"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column - Images -->
            <StackPanel Grid.Column="0">
                <!-- Main Image -->
                <Border x:Name="MainImage"
                        Background="#E0E0E0"
                        Height="480"
                        CornerRadius="12"/>

                <!-- Thumbnails -->
                <StackPanel Orientation="Horizontal"
                            Spacing="16"
                            Margin="0,20,0,0">
                    <Border Background="#E0E0E0" Height="100" Width="168" CornerRadius="8"/>
                    <Border Background="#E0E0E0" Height="100" Width="168" CornerRadius="8"/>
                    <Border Background="#E0E0E0" Height="100" Width="168" CornerRadius="8"/>
                    <Border Background="#E0E0E0" Height="100" Width="168" CornerRadius="8"/>
                </StackPanel>
            </StackPanel>

            <!-- Right Column - Property Info -->
            <StackPanel Grid.Column="2">
                <!-- Price -->
                <TextBlock Text="€ 349.000"
                           FontFamily="Inter"
                           FontWeight="Bold"
                           FontSize="32"
                           Foreground="Black"/>

                <!-- Title -->
                <TextBlock Text="Einfamilienhaus in Linz-Urfahr"
                           FontFamily="Inter"
                           FontWeight="SemiBold"
                           FontSize="24"
                           Foreground="Black"
                           Margin="0,8,0,0"/>

                <!-- Details -->
                <TextBlock Text="145 m² · 5 Zimmer · Baujahr 2018"
                           FontFamily="Inter"
                           FontSize="16"
                           Foreground="#666666"
                           Margin="0,8,0,0"/>

                <!-- Badge -->
                <Border Background="Black"
                        CornerRadius="8"
                        Height="28"
                        Width="60"
                        HorizontalAlignment="Left"
                        Margin="0,16,0,0">
                    <TextBlock Text="Haus"
                               FontFamily="Inter"
                               FontWeight="Medium"
                               FontSize="12"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Beschreibung Section -->
                <TextBlock Text="Beschreibung"
                           FontFamily="Inter"
                           FontWeight="SemiBold"
                           FontSize="18"
                           Foreground="Black"
                           Margin="0,32,0,0"/>
                <TextBlock Text="Wunderschönes Einfamilienhaus mit großem Garten in ruhiger Lage."
                           FontFamily="Inter"
                           FontSize="14"
                           Foreground="#666666"
                           Margin="0,12,0,0"
                           TextWrapping="Wrap"/>

                <!-- Ausstattung Section -->
                <TextBlock Text="Ausstattung"
                           FontFamily="Inter"
                           FontWeight="SemiBold"
                           FontSize="18"
                           Foreground="Black"
                           Margin="0,32,0,0"/>
                <TextBlock Text="✓ Garage  ✓ Garten  ✓ Terrasse  ✓ Keller"
                           FontFamily="Inter"
                           FontSize="14"
                           Foreground="#666666"
                           Margin="0,12,0,0"/>

                <!-- CTA Button -->
                <Button x:Name="ContactButton"
                        Content="Anbieter kontaktieren"
                        Background="Black"
                        Foreground="White"
                        FontFamily="Inter"
                        FontWeight="SemiBold"
                        FontSize="16"
                        Height="56"
                        Width="300"
                        CornerRadius="8"
                        Margin="0,48,0,0"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
