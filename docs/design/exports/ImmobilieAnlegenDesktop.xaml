<Page
    x:Class="Heimatplatz.Views.ImmobilieAnlegenDesktopPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8FAFC">

    <Grid x:Name="RootGrid">
        <!-- Header -->
        <Border x:Name="Header"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                Height="72"
                VerticalAlignment="Top">
            <TextBlock Text="Immobilien App"
                       FontFamily="Inter"
                       FontWeight="Bold"
                       FontSize="18"
                       Foreground="#0F172A"
                       Margin="47,0,0,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"/>
        </Border>

        <!-- Content Card -->
        <Border x:Name="ContentCard"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                CornerRadius="12"
                Width="600"
                Margin="0,120,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Padding="47,39,47,48">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Immobilie anlegen"
                           FontFamily="Inter"
                           FontWeight="Bold"
                           FontSize="24"
                           Foreground="#0F172A"/>

                <!-- Subtitle -->
                <TextBlock Text="Erstellen Sie ein neues Immobilienangebot"
                           FontFamily="Inter"
                           FontSize="14"
                           Foreground="#64748B"
                           Margin="0,8,0,0"/>

                <!-- Art der Immobilie Section -->
                <TextBlock Text="Art der Immobilie"
                           FontFamily="Inter"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="#0F172A"
                           Margin="0,32,0,0"/>

                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                    <Border Background="Black" CornerRadius="6" Padding="16,8">
                        <TextBlock Text="Haus"
                                   FontFamily="Inter"
                                   FontWeight="Medium"
                                   FontSize="14"
                                   Foreground="White"/>
                    </Border>
                    <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="6" Padding="16,8">
                        <TextBlock Text="Grundstück"
                                   FontFamily="Inter"
                                   FontWeight="Medium"
                                   FontSize="14"
                                   Foreground="#334155"/>
                    </Border>
                </StackPanel>

                <!-- Adresse Section -->
                <TextBlock Text="Adresse"
                           FontFamily="Inter"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="#0F172A"
                           Margin="0,32,0,0"/>

                <Border Background="White"
                        BorderBrush="#E2E8F0"
                        BorderThickness="1"
                        CornerRadius="6"
                        Height="48"
                        Margin="0,8,0,0">
                    <TextBox PlaceholderText="z.B. Musterstraße 123, 12345 Berlin"
                             FontFamily="Inter"
                             FontSize="14"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             Margin="15,0,15,0"/>
                </Border>

                <!-- Preis Section -->
                <TextBlock Text="Preis (€)"
                           FontFamily="Inter"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="#0F172A"
                           Margin="0,24,0,0"/>

                <Border Background="White"
                        BorderBrush="#E2E8F0"
                        BorderThickness="1"
                        CornerRadius="6"
                        Height="48"
                        Margin="0,8,0,0">
                    <TextBox PlaceholderText="z.B. 350.000"
                             FontFamily="Inter"
                             FontSize="14"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             Margin="15,0,15,0"/>
                </Border>

                <!-- Grundstücksgröße Section -->
                <TextBlock Text="Grundstücksgröße (m²)"
                           FontFamily="Inter"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="#0F172A"
                           Margin="0,24,0,0"/>

                <Border Background="White"
                        BorderBrush="#E2E8F0"
                        BorderThickness="1"
                        CornerRadius="6"
                        Height="48"
                        Margin="0,8,0,0">
                    <TextBox PlaceholderText="z.B. 500"
                             FontFamily="Inter"
                             FontSize="14"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             Margin="15,0,15,0"/>
                </Border>

                <!-- Submit Button -->
                <Button x:Name="SubmitButton"
                        Content="Immobilie erstellen"
                        Background="Black"
                        Foreground="White"
                        FontFamily="Inter"
                        FontWeight="SemiBold"
                        FontSize="14"
                        Height="48"
                        CornerRadius="6"
                        Margin="0,48,0,0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
