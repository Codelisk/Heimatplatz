<Page
    x:Class="Heimatplatz.Views.LoginMobilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8FAFC">

    <Grid x:Name="RootGrid">
        <!-- Header -->
        <Border x:Name="Header"
                Background="White"
                Height="64"
                VerticalAlignment="Top">
            <TextBlock Text="←"
                       FontFamily="Inter"
                       FontSize="24"
                       Foreground="Black"
                       Margin="16,0,0,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"/>
        </Border>

        <!-- Content -->
        <StackPanel Margin="16,120,16,0" VerticalAlignment="Top">
            <!-- Logo -->
            <TextBlock Text="ImmoOÖ"
                       FontFamily="Inter"
                       FontWeight="Bold"
                       FontSize="32"
                       Foreground="Black"/>

            <!-- Subtitle -->
            <TextBlock Text="Willkommen zurück"
                       FontFamily="Inter"
                       FontSize="16"
                       Foreground="#666666"
                       Margin="0,16,0,0"/>

            <!-- Email Label -->
            <TextBlock Text="E-Mail"
                       FontFamily="Inter"
                       FontWeight="Medium"
                       FontSize="14"
                       Foreground="Black"
                       Margin="0,48,0,0"/>

            <!-- Email Input -->
            <Border Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Height="52"
                    Margin="0,8,0,0">
                <TextBox PlaceholderText="max.mustermann@email.at"
                         FontFamily="Inter"
                         FontSize="14"
                         Foreground="Black"
                         BorderThickness="0"
                         Background="Transparent"
                         VerticalAlignment="Center"
                         Margin="15,0,15,0"/>
            </Border>

            <!-- Password Label -->
            <TextBlock Text="Passwort"
                       FontFamily="Inter"
                       FontWeight="Medium"
                       FontSize="14"
                       Foreground="Black"
                       Margin="0,24,0,0"/>

            <!-- Password Input -->
            <Border Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Height="52"
                    Margin="0,8,0,0">
                <PasswordBox PlaceholderText="••••••••"
                             FontFamily="Inter"
                             FontSize="14"
                             Foreground="Black"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             Margin="15,0,15,0"/>
            </Border>

            <!-- Forgot Password -->
            <TextBlock Text="Passwort vergessen?"
                       FontFamily="Inter"
                       FontWeight="Medium"
                       FontSize="14"
                       Foreground="Black"
                       HorizontalAlignment="Right"
                       Margin="0,16,0,0"/>

            <!-- Login Button -->
            <Button x:Name="LoginButton"
                    Content="Anmelden"
                    Background="Black"
                    Foreground="White"
                    FontFamily="Inter"
                    FontWeight="SemiBold"
                    FontSize="16"
                    Height="56"
                    CornerRadius="6"
                    Margin="0,32,0,0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"/>

            <!-- Register Link -->
            <TextBlock Text="Noch kein Konto? Registrieren"
                       FontFamily="Inter"
                       FontSize="14"
                       Foreground="#666666"
                       HorizontalAlignment="Center"
                       Margin="0,32,0,0"/>
        </StackPanel>
    </Grid>
</Page>
