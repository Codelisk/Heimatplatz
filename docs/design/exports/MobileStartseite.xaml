<Page
    x:Class="Heimatplatz.Views.MobileStartseitePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8FAFC">

    <Grid x:Name="RootGrid">
        <!-- Header -->
        <Border x:Name="Header"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                Height="60"
                VerticalAlignment="Top"
                CornerRadius="0">
            <Grid>
                <TextBlock Text="ImmoOÖ"
                           FontFamily="Inter"
                           FontWeight="Bold"
                           FontSize="24"
                           Foreground="Black"
                           Margin="15,17,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"/>
                <TextBlock Text="Anmelden"
                           FontFamily="Inter"
                           FontWeight="Medium"
                           FontSize="14"
                           Foreground="Black"
                           Margin="0,19,20,0"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <!-- Location Picker -->
        <Border x:Name="LocationPicker"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                Height="40"
                Width="343"
                CornerRadius="6"
                Margin="16,90,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBlock Text="Ort auswählen ▼"
                       FontFamily="Inter"
                       FontWeight="Medium"
                       FontSize="14"
                       Foreground="#334155"
                       Margin="11,0,0,0"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Filter Chips -->
        <StackPanel x:Name="FilterChips"
                    Orientation="Horizontal"
                    Spacing="8"
                    Margin="16,140,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">

            <!-- Chip - Grundstück (Selected) -->
            <Border Background="Black"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="16,8">
                <TextBlock Text="Grundstück"
                           FontFamily="Inter"
                           FontWeight="Medium"
                           FontSize="14"
                           Foreground="White"/>
            </Border>

            <!-- Chip - Zwangsversteigerung -->
            <Border Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="16,8">
                <TextBlock Text="Zwangsversteigerung"
                           FontFamily="Inter"
                           FontWeight="Medium"
                           FontSize="14"
                           Foreground="Black"/>
            </Border>

            <!-- Chip - Haus -->
            <Border Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="16,8">
                <TextBlock Text="Haus"
                           FontFamily="Inter"
                           FontWeight="Medium"
                           FontSize="14"
                           Foreground="Black"/>
            </Border>
        </StackPanel>

        <!-- Immobilien Card -->
        <Border x:Name="ImmobilienCard"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                CornerRadius="8"
                Width="343"
                Height="280"
                Margin="16,196,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <Grid>
                <!-- Bild Placeholder -->
                <Border Background="#E0E0E0"
                        Height="180"
                        CornerRadius="12,12,0,0"
                        VerticalAlignment="Top"
                        Margin="-1,-1,-1,0"/>

                <!-- Card Content -->
                <StackPanel Margin="11,191,0,0" VerticalAlignment="Top">
                    <!-- Price Row -->
                    <Grid>
                        <TextBlock Text="€ 349.000"
                                   FontFamily="Inter"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   Foreground="Black"
                                   HorizontalAlignment="Left"/>
                        <TextBlock Text="120 m²"
                                   FontFamily="Inter"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Foreground="#0F172A"
                                   HorizontalAlignment="Left"
                                   Margin="188,0,0,0"/>
                    </Grid>

                    <!-- Address -->
                    <TextBlock Text="4020 Linz, Hauptstraße 15"
                               FontFamily="Inter"
                               FontWeight="Normal"
                               FontSize="14"
                               Foreground="#666666"
                               Margin="0,6,0,0"/>

                    <!-- Seller Badge -->
                    <Border Background="#F1F5F9"
                            CornerRadius="6"
                            Height="24"
                            Width="130"
                            HorizontalAlignment="Left"
                            Margin="0,12,0,0">
                        <TextBlock Text="Mustermann Immobilien"
                                   FontFamily="Inter"
                                   FontWeight="Medium"
                                   FontSize="11"
                                   Foreground="#475569"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Details -->
                    <TextBlock Text="120 m² · 4 Zimmer · Haus"
                               FontFamily="Inter"
                               FontWeight="Normal"
                               FontSize="12"
                               Foreground="#999999"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Button Primary -->
        <Button x:Name="ButtonPrimary"
                Content="Alle Ergebnisse anzeigen"
                Background="Black"
                Foreground="White"
                FontFamily="Inter"
                FontWeight="SemiBold"
                FontSize="16"
                Height="48"
                Width="343"
                CornerRadius="6"
                Margin="16,500,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>

        <!-- Button Secondary -->
        <Button x:Name="ButtonSecondary"
                Content="Filter anpassen"
                Background="White"
                Foreground="Black"
                BorderBrush="#CBD5E1"
                BorderThickness="1"
                FontFamily="Inter"
                FontWeight="SemiBold"
                FontSize="16"
                Height="48"
                Width="343"
                CornerRadius="6"
                Margin="16,560,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>
    </Grid>
</Page>
