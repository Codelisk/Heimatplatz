<Page
    x:Class="Heimatplatz.Views.AccountMobilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8FAFC">

    <Grid x:Name="RootGrid">
        <!-- Header -->
        <Border x:Name="Header"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                Height="64"
                VerticalAlignment="Top">
            <Grid>
                <TextBlock Text="←"
                           FontFamily="Inter"
                           FontSize="20"
                           Foreground="Black"
                           Margin="15,0,0,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                <TextBlock Text="Mein Konto"
                           FontFamily="Inter"
                           FontWeight="SemiBold"
                           FontSize="16"
                           Foreground="Black"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Content -->
        <StackPanel Margin="16,100,16,0" VerticalAlignment="Top" HorizontalAlignment="Center">
            <!-- Avatar -->
            <Border Background="#E0E0E0"
                    Width="100"
                    Height="100"
                    CornerRadius="50"
                    HorizontalAlignment="Center"/>

            <!-- Name -->
            <TextBlock Text="Max Mustermann"
                       FontFamily="Inter"
                       FontWeight="Bold"
                       FontSize="20"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>

            <!-- Email -->
            <TextBlock Text="max@beispiel.at"
                       FontFamily="Inter"
                       FontSize="14"
                       Foreground="#666666"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Menu Items -->
        <StackPanel Margin="16,310,16,0" VerticalAlignment="Top" Spacing="8">
            <!-- Menu Item 1 - Meine Favoriten -->
            <Border Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Height="56">
                <Grid Margin="16,0">
                    <TextBlock Text="Meine Favoriten"
                               FontFamily="Inter"
                               FontWeight="Medium"
                               FontSize="16"
                               Foreground="Black"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>
                    <TextBlock Text="→"
                               FontFamily="Inter"
                               FontSize="16"
                               Foreground="#999999"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Menu Item 2 - Suchprofile -->
            <Border Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Height="56">
                <Grid Margin="16,0">
                    <TextBlock Text="Suchprofile"
                               FontFamily="Inter"
                               FontWeight="Medium"
                               FontSize="16"
                               Foreground="Black"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>
                    <TextBlock Text="→"
                               FontFamily="Inter"
                               FontSize="16"
                               Foreground="#999999"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Menu Item 3 - Einstellungen -->
            <Border Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Height="56">
                <Grid Margin="16,0">
                    <TextBlock Text="Einstellungen"
                               FontFamily="Inter"
                               FontWeight="Medium"
                               FontSize="16"
                               Foreground="Black"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>
                    <TextBlock Text="→"
                               FontFamily="Inter"
                               FontSize="16"
                               Foreground="#999999"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Menu Item 4 - Abmelden -->
            <Border Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Height="56">
                <Grid Margin="16,0">
                    <TextBlock Text="Abmelden"
                               FontFamily="Inter"
                               FontWeight="Medium"
                               FontSize="16"
                               Foreground="Black"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"/>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Page>
