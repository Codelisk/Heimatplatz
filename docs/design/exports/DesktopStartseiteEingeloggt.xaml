<Page
    x:Class="Heimatplatz.Views.DesktopStartseiteEingeloggtPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8FAFC">

    <Grid x:Name="RootGrid">
        <!-- Header -->
        <Border x:Name="Header"
                Background="White"
                Height="64"
                VerticalAlignment="Top">
            <Grid Margin="80,0,80,0">
                <TextBlock Text="Immobilien"
                           FontFamily="Inter"
                           FontWeight="Bold"
                           FontSize="18"
                           Foreground="#0F172A"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                <TextBlock Text="Max Mustermann"
                           FontFamily="Inter"
                           FontWeight="Medium"
                           FontSize="14"
                           Foreground="#334155"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Location Picker -->
        <Border x:Name="LocationPicker"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                Height="44"
                Width="280"
                CornerRadius="6"
                Margin="80,96,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBlock Text="Ort auswählen ▼"
                       FontFamily="Inter"
                       FontSize="14"
                       Foreground="#334155"
                       Margin="16,0,0,0"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Location Dropdown -->
        <Border x:Name="LocationDropdown"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                Width="280"
                CornerRadius="6"
                Margin="80,144,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Padding="0,8">
            <StackPanel>
                <!-- Bezirk Row -->
                <Grid Margin="12,10,12,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="▼"
                                   FontFamily="Inter"
                                   FontSize="10"
                                   Foreground="#64748B"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Linz-Land (Mein Bezirk)"
                                   FontFamily="Inter"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Foreground="#0F172A"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Ort Row - Traun -->
                <Grid Margin="36,8,12,8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="☑"
                                   FontFamily="Inter"
                                   FontSize="14"
                                   Foreground="Black"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Traun"
                                   FontFamily="Inter"
                                   FontSize="14"
                                   Foreground="#334155"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Ort Row - Leonding -->
                <Grid Margin="36,8,12,8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="☑"
                                   FontFamily="Inter"
                                   FontSize="14"
                                   Foreground="Black"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Leonding"
                                   FontFamily="Inter"
                                   FontSize="14"
                                   Foreground="#334155"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Ort Row - Ansfelden -->
                <Grid Margin="36,8,12,8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="☑"
                                   FontFamily="Inter"
                                   FontSize="14"
                                   Foreground="Black"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Ansfelden"
                                   FontFamily="Inter"
                                   FontSize="14"
                                   Foreground="#334155"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
