<Page
    x:Class="Heimatplatz.Views.AccountDesktopPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8FAFC">

    <Grid x:Name="RootGrid">
        <!-- Header -->
        <Border x:Name="Header"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                Height="64"
                VerticalAlignment="Top">
            <Grid Margin="79,0,79,0">
                <TextBlock Text="ImmoOÖ"
                           FontFamily="Inter"
                           FontWeight="Bold"
                           FontSize="20"
                           Foreground="Black"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                <TextBlock Text="Max Mustermann"
                           FontFamily="Inter"
                           FontSize="14"
                           Foreground="Black"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Account Card -->
        <Border x:Name="AccountCard"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                CornerRadius="8"
                Width="600"
                Height="600"
                Margin="0,120,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Center">
            <StackPanel>
                <!-- Avatar -->
                <Border Background="#E0E0E0"
                        Width="100"
                        Height="100"
                        CornerRadius="50"
                        HorizontalAlignment="Center"
                        Margin="0,40,0,0"/>

                <!-- Name -->
                <TextBlock Text="Max Mustermann"
                           FontFamily="Inter"
                           FontWeight="Bold"
                           FontSize="24"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>

                <!-- Email -->
                <TextBlock Text="max@beispiel.at"
                           FontFamily="Inter"
                           FontSize="14"
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>

                <!-- Menu Items -->
                <StackPanel Margin="40,30,40,0" Spacing="14">
                    <!-- Menu Item 1 - Meine Favoriten -->
                    <Border Background="White"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1"
                            CornerRadius="8"
                            Height="56">
                        <Grid Margin="16,0">
                            <TextBlock Text="Meine Favoriten"
                                       FontFamily="Inter"
                                       FontWeight="Medium"
                                       FontSize="16"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                            <TextBlock Text="→"
                                       FontFamily="Inter"
                                       FontSize="16"
                                       Foreground="#999999"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Menu Item 2 - Suchprofile -->
                    <Border Background="White"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1"
                            CornerRadius="8"
                            Height="56">
                        <Grid Margin="16,0">
                            <TextBlock Text="Suchprofile"
                                       FontFamily="Inter"
                                       FontWeight="Medium"
                                       FontSize="16"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                            <TextBlock Text="→"
                                       FontFamily="Inter"
                                       FontSize="16"
                                       Foreground="#999999"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Menu Item 3 - Einstellungen -->
                    <Border Background="White"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1"
                            CornerRadius="8"
                            Height="56">
                        <Grid Margin="16,0">
                            <TextBlock Text="Einstellungen"
                                       FontFamily="Inter"
                                       FontWeight="Medium"
                                       FontSize="16"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                            <TextBlock Text="→"
                                       FontFamily="Inter"
                                       FontSize="16"
                                       Foreground="#999999"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Menu Item 4 - Abmelden -->
                    <Border Background="White"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1"
                            CornerRadius="8"
                            Height="56">
                        <Grid Margin="16,0">
                            <TextBlock Text="Abmelden"
                                       FontFamily="Inter"
                                       FontWeight="Medium"
                                       FontSize="16"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
