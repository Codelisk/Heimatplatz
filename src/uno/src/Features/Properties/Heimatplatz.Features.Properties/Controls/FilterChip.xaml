<UserControl x:Class="Heimatplatz.Features.Properties.Controls.FilterChip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Heimatplatz.Features.Properties.Controls">

    <!--
    FilterChip - Toggle-Button fuer Filteroptionen
    Zeigt: Label mit selektiertem/unselektiertem Zustand
    -->

    <ToggleButton x:Name="ChipButton"
                  Style="{StaticResource FilterChipBaseStyle}"
                  AutomationProperties.AutomationId="FilterChip_Button"
                  Click="OnChipClick">
        <TextBlock x:Name="ChipLabel"
                   AutomationProperties.AutomationId="FilterChip_Label" />
    </ToggleButton>
</UserControl>
