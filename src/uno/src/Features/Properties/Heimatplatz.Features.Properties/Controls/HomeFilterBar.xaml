<UserControl x:Class="Heimatplatz.Features.Properties.Controls.HomeFilterBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Heimatplatz.Features.Properties.Controls"
             xmlns:utu="using:Uno.Toolkit.UI">

    <!--
    HomeFilterBar - Filter-Leiste fÃ¼r den AppHeader (Desktop-Modus)
    Hat eigenes ViewModel (HomeFilterBarViewModel) via Uno Navigation.
    Nur sichtbar auf Wide (905px+) Bildschirmen.
    -->

    <StackPanel Orientation="Horizontal"
                Visibility="{utu:Responsive Normal=Collapsed, Wide=Visible}"
                Spacing="8"
                VerticalAlignment="Center"
                AutomationProperties.AutomationId="HomeFilterBar_Root">

        <!-- Ort-Picker (hierarchisch) -->
        <local:OrtPicker MinWidth="150"
                         Bezirke="{Binding Bezirke}"
                         SelectedOrte="{Binding SelectedOrte, Mode=TwoWay}"
                         AutomationProperties.AutomationId="HomeFilterBar_OrtPicker" />

        <!-- Alters-Filter -->
        <local:AgeFilterPicker MinWidth="130"
                               SelectedAgeFilter="{Binding SelectedAgeFilter, Mode=TwoWay}"
                               AutomationProperties.AutomationId="HomeFilterBar_AgeFilterPicker" />

        <!-- Filter Chips -->
        <StackPanel Orientation="Horizontal"
                    Spacing="6"
                    AutomationProperties.AutomationId="HomeFilterBar_FilterChips">
            <local:FilterChip Label="Haus"
                              IsSelected="{Binding IsHausSelected, Mode=TwoWay}"
                              AutomationProperties.AutomationId="HomeFilterBar_FilterChip_Haus" />
            <local:FilterChip Label="Grund"
                              IsSelected="{Binding IsGrundstueckSelected, Mode=TwoWay}"
                              AutomationProperties.AutomationId="HomeFilterBar_FilterChip_Grund" />
            <local:FilterChip Label="ZV"
                              IsSelected="{Binding IsZwangsversteigerungSelected, Mode=TwoWay}"
                              AutomationProperties.AutomationId="HomeFilterBar_FilterChip_ZV" />
        </StackPanel>

        <!-- Ergebnis-Counter -->
        <TextBlock VerticalAlignment="Center"
                   Foreground="{ThemeResource OnSurfaceVariantBrush}"
                   FontSize="13"
                   Margin="8,0,0,0"
                   AutomationProperties.AutomationId="HomeFilterBar_ResultCount">
            <Run Text="{Binding ResultCount}" FontWeight="SemiBold" Foreground="{ThemeResource OnSurfaceBrush}" />
            <Run Text=" Objekte" />
        </TextBlock>
    </StackPanel>
</UserControl>
