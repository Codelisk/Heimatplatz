<UserControl x:Class="Heimatplatz.Features.Properties.Controls.AppHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Heimatplatz.Features.Properties.Controls"
             xmlns:utu="using:Uno.Toolkit.UI">

    <!--
    AppHeader - Header mit Logo und optionaler Suche
    Responsive: Mobile zeigt kompaktes Layout, Desktop vollstaendiges
    -->

    <Grid Style="{StaticResource AppHeaderContainerStyle}"
          utu:SafeArea.Insets="Top"
          AutomationProperties.AutomationId="AppHeader_Container">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Logo -->
        <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="8"
                    AutomationProperties.AutomationId="AppHeader_LogoContainer">
            <FontIcon Glyph="&#xE80F;"
                      FontSize="24"
                      Foreground="{ThemeResource OnSurfaceBrush}"
                      VerticalAlignment="Center" />
            <TextBlock Text="Heimatplatz"
                       Style="{StaticResource AppHeaderLogoStyle}"
                       AutomationProperties.AutomationId="AppHeader_LogoText" />
        </StackPanel>

        <!-- Subtitle (nur auf Desktop) -->
        <TextBlock Grid.Column="1"
                   Text="Immobilien in OberÃ¶sterreich"
                   Foreground="{ThemeResource OnSurfaceVariantBrush}"
                   FontSize="14"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Visibility="{utu:Responsive Narrowest=Collapsed, Normal=Visible}"
                   AutomationProperties.AutomationId="AppHeader_Subtitle" />

        <!-- Rechte Seite: Aktionen -->
        <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    Spacing="8"
                    AutomationProperties.AutomationId="AppHeader_Actions">

            <!-- Suche Button (Mobile) -->
            <Button Style="{StaticResource AppHeaderNavButtonStyle}"
                    Visibility="{utu:Responsive Narrowest=Visible, Normal=Collapsed}"
                    AutomationProperties.AutomationId="AppHeader_SearchButton">
                <FontIcon Glyph="&#xE721;" FontSize="18" />
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
