<UserControl x:Class="Heimatplatz.Features.Properties.Controls.PropertyCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Heimatplatz.Features.Properties.Controls"
             xmlns:utu="using:Uno.Toolkit.UI">

    <!--
    PropertyCard - Vertikales Grid Card Design
    Bild oben, Content darunter - optimiert fuer Grid Layout
    Redesign: Verbesserte visuelle Hierarchie und Tiefe
    -->

    <Grid Background="Transparent"
          Tapped="OnCardTapped">
        <Border Background="{ThemeResource SurfaceBrush}"
                CornerRadius="{StaticResource RadiusMd}"
                Padding="0"
                Translation="0,0,16"
                BorderBrush="{ThemeResource BorderBrush}"
                BorderThickness="0.5"
                AutomationProperties.AutomationId="PropertyCard_Container">
        <Border.Shadow>
            <ThemeShadow />
        </Border.Shadow>

        <Grid>
            <Grid.RowDefinitions>
                <!-- Bild: Oben, prominenter Bereich -->
                <RowDefinition Height="200" />
                <!-- Content: Darunter, Auto-Hoehe fuer vollstaendige Anzeige -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Premium Bilder-Carousel mit Overlay -->
            <Grid Grid.Row="0"
                  x:Name="ImageContainerGrid"
                  AutomationProperties.AutomationId="PropertyCard_ImageContainer">

                <!-- Placeholder -->
                <Border Background="{ThemeResource PlaceholderBrush}"
                        CornerRadius="8,8,0,0"
                        IsHitTestVisible="False"
                        AutomationProperties.AutomationId="PropertyCard_ImagePlaceholder">
                    <FontIcon Glyph="&#xE722;"
                              FontSize="40"
                              Foreground="{ThemeResource DetailsBrush}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Opacity="0.5" />
                </Border>

                <!-- FlipView fuer Bilder-Swipe -->
                <Border CornerRadius="8,8,0,0"
                        IsHitTestVisible="False"
                        AutomationProperties.AutomationId="PropertyCard_ImageBorder">
                    <Border.Clip>
                        <RectangleGeometry Rect="0,0,10000,200" />
                    </Border.Clip>
                    <FlipView x:Name="ImageFlipView"
                              Background="Transparent"
                              AutomationProperties.AutomationId="PropertyCard_FlipView">
                        <FlipView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding}"
                                       Stretch="UniformToFill"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                            </DataTemplate>
                        </FlipView.ItemTemplate>
                    </FlipView>
                </Border>

                <!-- Gradient Overlay fuer bessere Lesbarkeit -->
                <Border CornerRadius="8,8,0,0"
                        IsHitTestVisible="False">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#40000000" Offset="0" />
                            <GradientStop Color="#00000000" Offset="0.3" />
                            <GradientStop Color="#00000000" Offset="0.6" />
                            <GradientStop Color="#60000000" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <!-- Bild-Counter unten links -->
                <Border x:Name="ImageCounterBadge"
                        Background="#80000000"
                        CornerRadius="4"
                        Padding="8,4"
                        Margin="12"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Visibility="Collapsed"
                        IsHitTestVisible="False"
                        AutomationProperties.AutomationId="PropertyCard_ImageCounter">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE8B9;"
                                  FontSize="10"
                                  Foreground="White" />
                        <TextBlock x:Name="ImageCounterText"
                                   FontSize="11"
                                   FontWeight="Medium"
                                   Foreground="White" />
                    </StackPanel>
                </Border>

                <!-- Typ-Badge: Oben links - Pill Design -->
                <Border x:Name="TypeBadge"
                        Background="{ThemeResource AccentBrush}"
                        CornerRadius="12"
                        Padding="12,6"
                        Margin="12"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        IsHitTestVisible="False"
                        AutomationProperties.AutomationId="PropertyCard_TypeBadge">
                    <TextBlock x:Name="TypeBadgeText"
                               FontSize="10"
                               FontWeight="SemiBold"
                               CharacterSpacing="80"
                               Foreground="{ThemeResource ChipSelectedForegroundBrush}"
                               AutomationProperties.AutomationId="PropertyCard_TypeBadgeText" />
                </Border>

                <!-- Preis: Unten rechts auf dem Bild - Prominenter -->
                <Border Background="#E8000000"
                        CornerRadius="6"
                        Padding="14,8"
                        Margin="12"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        IsHitTestVisible="False"
                        AutomationProperties.AutomationId="PropertyCard_PriceOverlay">
                    <TextBlock x:Name="PriceText"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               AutomationProperties.AutomationId="PropertyCard_Price" />
                </Border>

                <!-- Dezente Navigations-Pfeile -->
                <Button x:Name="PrevImageButton"
                        Click="OnPrevImageClick"
                        Tapped="OnPrevImageTapped"
                        Background="#50000000"
                        BorderThickness="0"
                        Padding="10,20"
                        CornerRadius="0,6,6,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Visibility="Collapsed"
                        Opacity="0.8">
                    <FontIcon Glyph="&#xE76B;"
                              FontSize="12"
                              Foreground="White" />
                </Button>

                <Button x:Name="NextImageButton"
                        Click="OnNextImageClick"
                        Tapped="OnNextImageTapped"
                        Background="#50000000"
                        BorderThickness="0"
                        Padding="10,20"
                        CornerRadius="6,0,0,6"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Visibility="Collapsed"
                        Opacity="0.8">
                    <FontIcon Glyph="&#xE76C;"
                              FontSize="12"
                              Foreground="White" />
                </Button>

                <!-- Action Buttons: Oben rechts (je nach CardMode) -->

                <!-- Default Mode: 3-Punkt Menü - Circular Design -->
                <Button x:Name="MoreOptionsButton"
                        Tapped="OnMoreOptionsTapped"
                        Background="#70000000"
                        BorderThickness="0"
                        Padding="0"
                        Width="36"
                        Height="36"
                        CornerRadius="18"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Margin="12"
                        AutomationProperties.AutomationId="PropertyCard_MoreOptions">
                    <Button.Flyout>
                        <MenuFlyout Placement="BottomEdgeAlignedRight">
                            <MenuFlyoutItem Text="Favorisieren"
                                          Click="OnFavoriteClick">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xEB51;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Blockieren"
                                          Click="OnBlockClick">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8F8;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                    <FontIcon Glyph="&#xE712;"
                              FontSize="14"
                              Foreground="White" />
                </Button>

                <!-- Favorite Mode: Herz-Icon zum Entfavorisieren -->
                <Button x:Name="FavoriteActionButton"
                        Tapped="OnActionButtonTapped"
                        Click="OnFavoriteActionClick"
                        Background="#70000000"
                        BorderThickness="0"
                        Padding="0"
                        Width="36"
                        Height="36"
                        CornerRadius="18"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Margin="12"
                        Visibility="Collapsed"
                        ToolTipService.ToolTip="Aus Favoriten entfernen"
                        AutomationProperties.AutomationId="PropertyCard_FavoriteAction">
                    <FontIcon Glyph="&#xEB52;"
                              FontSize="16"
                              Foreground="#FF6B6B" />
                </Button>

                <!-- Blocked Mode: X-Icon zum Entblockieren -->
                <Button x:Name="BlockedActionButton"
                        Tapped="OnActionButtonTapped"
                        Click="OnBlockedActionClick"
                        Background="#70000000"
                        BorderThickness="0"
                        Padding="0"
                        Width="36"
                        Height="36"
                        CornerRadius="18"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Margin="12"
                        Visibility="Collapsed"
                        ToolTipService.ToolTip="Blockierung aufheben"
                        AutomationProperties.AutomationId="PropertyCard_BlockedAction">
                    <FontIcon Glyph="&#xE711;"
                              FontSize="16"
                              Foreground="White" />
                </Button>

                <!-- Owner Mode: X-Icon zum Löschen -->
                <Button x:Name="OwnerDeleteButton"
                        Tapped="OnActionButtonTapped"
                        Click="OnOwnerDeleteClick"
                        Background="#70000000"
                        BorderThickness="0"
                        Padding="0"
                        Width="36"
                        Height="36"
                        CornerRadius="18"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Margin="12"
                        Visibility="Collapsed"
                        ToolTipService.ToolTip="Immobilie löschen"
                        AutomationProperties.AutomationId="PropertyCard_OwnerDelete">
                    <FontIcon Glyph="&#xE711;"
                              FontSize="16"
                              Foreground="White" />
                </Button>
            </Grid>

            <!-- Content: Zwei-Spalten Layout - Verbesserte Hierarchie -->
            <Grid Grid.Row="1"
                  Padding="12,10,12,10"
                  AutomationProperties.AutomationId="PropertyCard_Content">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Links: Ort, Adresse, Titel, Anbieter -->
                <StackPanel Grid.Column="0"
                            Spacing="2"
                            VerticalAlignment="Center">

                    <!-- Ort (prominent) -->
                    <TextBlock AutomationProperties.AutomationId="PropertyCard_Location"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource OnSurfaceBrush}"
                               TextTrimming="CharacterEllipsis"
                               MaxLines="1">
                        <Run x:Name="OrtText" />
                    </TextBlock>

                    <!-- Adresse -->
                    <TextBlock AutomationProperties.AutomationId="PropertyCard_Address"
                               FontSize="12"
                               Foreground="{ThemeResource OnSurfaceVariantBrush}"
                               TextTrimming="CharacterEllipsis"
                               MaxLines="1">
                        <Run x:Name="AddressText" />
                    </TextBlock>

                    <!-- Titel (max 1 Zeile) -->
                    <TextBlock x:Name="TitleText"
                               FontSize="11"
                               Foreground="{ThemeResource DetailsBrush}"
                               TextTrimming="CharacterEllipsis"
                               MaxLines="1"
                               Margin="0,2,0,0"
                               AutomationProperties.AutomationId="PropertyCard_Title" />

                    <!-- Anbieter mit Icon -->
                    <StackPanel Orientation="Horizontal"
                                Spacing="4"
                                Margin="0,2,0,0">
                        <FontIcon Glyph="&#xE77B;"
                                  FontSize="9"
                                  Foreground="{ThemeResource DetailsBrush}" />
                        <TextBlock x:Name="SellerBadgeText"
                                   FontSize="10"
                                   Foreground="{ThemeResource DetailsBrush}"
                                   AutomationProperties.AutomationId="PropertyCard_Seller" />
                    </StackPanel>

                    <!-- Datum hinzugefuegt -->
                    <StackPanel Orientation="Horizontal"
                                Spacing="4"
                                Margin="0,2,0,0">
                        <FontIcon Glyph="&#xE787;"
                                  FontSize="9"
                                  Foreground="{ThemeResource DetailsBrush}" />
                        <TextBlock x:Name="CreatedAtText"
                                   FontSize="10"
                                   Foreground="{ThemeResource DetailsBrush}"
                                   AutomationProperties.AutomationId="PropertyCard_CreatedAt" />
                    </StackPanel>
                </StackPanel>

                <!-- Rechts: m² und Tags -->
                <StackPanel Grid.Column="1"
                            Spacing="4"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="12,0,0,0">

                    <!-- Grundstuecksflaeche prominent -->
                    <StackPanel HorizontalAlignment="Right">
                        <TextBlock HorizontalAlignment="Right"
                                   AutomationProperties.AutomationId="PropertyCard_Area">
                            <Run x:Name="GrundstueckText"
                                 FontSize="20"
                                 FontWeight="Bold"
                                 Foreground="{ThemeResource OnSurfaceBrush}" />
                        </TextBlock>
                        <TextBlock Text="m² Grund"
                                   FontSize="10"
                                   Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                   HorizontalAlignment="Right" />
                    </StackPanel>

                    <!-- Tags: Wfl und Zimmer -->
                    <StackPanel Orientation="Horizontal"
                                Spacing="4"
                                HorizontalAlignment="Right"
                                AutomationProperties.AutomationId="PropertyCard_Details">

                        <!-- Wohnflaeche -->
                        <Border x:Name="WohnflaechePanel"
                                Background="{ThemeResource SolidBackgroundFillColorSecondary}"
                                CornerRadius="3"
                                Padding="6,2">
                            <TextBlock FontSize="10"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                       AutomationProperties.AutomationId="PropertyCard_Wohnflaeche">
                                <Run x:Name="WohnflaecheText" FontWeight="SemiBold" />
                                <Run Text=" Wfl" />
                            </TextBlock>
                        </Border>

                        <!-- Zimmer -->
                        <Border x:Name="RoomsPanel"
                                Background="{ThemeResource SolidBackgroundFillColorSecondary}"
                                CornerRadius="3"
                                Padding="6,2">
                            <TextBlock FontSize="10"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                       AutomationProperties.AutomationId="PropertyCard_Rooms">
                                <Run x:Name="RoomsText" FontWeight="SemiBold" />
                                <Run Text=" Zi" />
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
        </Border>
    </Grid>
</UserControl>
