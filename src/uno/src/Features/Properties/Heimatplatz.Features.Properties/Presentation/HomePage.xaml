<Page x:Class="Heimatplatz.Features.Properties.Presentation.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Heimatplatz.Features.Properties.Presentation"
      xmlns:controls="using:Heimatplatz.Features.Properties.Controls"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:uc="using:UnoFramework.Controls"
      NavigationCacheMode="Required">

    <!--
    HomePage - Premium Editorial Design
    Elegantes Layout mit grosszuegigem Weissraum
    -->

    <Grid Background="{ThemeResource BackgroundBrush}"
          AutomationProperties.AutomationId="HomePage_Root">

        <uc:BusyOverlay IsBusy="{Binding IsBusy}"
                        BusyMessage="{Binding BusyMessage}"
                        AutomationProperties.AutomationId="HomePage_BusyOverlay">

            <Grid utu:SafeArea.Insets="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Kompakter Header -->
                <Border Grid.Row="0"
                        Background="{ThemeResource SurfaceBrush}"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="{utu:Responsive Narrowest='12,10', Normal='20,12'}"
                        AutomationProperties.AutomationId="HomePage_Header">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Logo: Elegant -->
                        <TextBlock Grid.Column="0"
                                   Text="HEIMATPLATZ"
                                   FontSize="{utu:Responsive Narrowest=12, Normal=15}"
                                   FontWeight="Bold"
                                   CharacterSpacing="150"
                                   Foreground="{ThemeResource OnSurfaceBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,24,0"
                                   AutomationProperties.AutomationId="HomePage_Logo" />

                        <!-- Ort-Picker + Filter Chips (Desktop) - nur ab Wide (905px+) -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="8,0"
                                    Visibility="{utu:Responsive Normal=Collapsed, Wide=Visible}"
                                    AutomationProperties.AutomationId="HomePage_FilterArea">

                            <!-- Ort-Picker (hierarchisch) -->
                            <controls:OrtPicker x:Name="OrtPickerControl"
                                                MinWidth="140"
                                                Bezirke="{Binding Bezirke}"
                                                SelectedOrte="{Binding SelectedOrte, Mode=TwoWay}"
                                                AutomationProperties.AutomationId="HomePage_OrtPicker" />

                            <!-- Filter Chips -->
                            <StackPanel Orientation="Horizontal"
                                        Spacing="6"
                                        AutomationProperties.AutomationId="HomePage_FilterChips">
                                <controls:FilterChip Label="Alle"
                                                     IsSelected="{Binding IsAllSelected, Mode=TwoWay}"
                                                     AutomationProperties.AutomationId="HomePage_FilterChip_All" />
                                <controls:FilterChip Label="Haus"
                                                     IsSelected="{Binding IsHausSelected, Mode=TwoWay}"
                                                     AutomationProperties.AutomationId="HomePage_FilterChip_Haus" />
                                <controls:FilterChip Label="Grund"
                                                     IsSelected="{Binding IsGrundstueckSelected, Mode=TwoWay}"
                                                     AutomationProperties.AutomationId="HomePage_FilterChip_Grundstueck" />
                                <controls:FilterChip Label="ZV"
                                                     IsSelected="{Binding IsZwangsversteigerungSelected, Mode=TwoWay}"
                                                     AutomationProperties.AutomationId="HomePage_FilterChip_Zwangsversteigerung" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Rechte Seite: Counter + Auth Bereich -->
                        <StackPanel Grid.Column="2"
                                    Orientation="Horizontal"
                                    Spacing="12"
                                    VerticalAlignment="Center">

                            <!-- Ergebnis-Counter -->
                            <TextBlock VerticalAlignment="Center"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                       FontSize="{utu:Responsive Narrowest=11, Normal=13}"
                                       AutomationProperties.AutomationId="HomePage_ResultCount">
                                <Run Text="{Binding Properties.Count}" FontWeight="SemiBold" Foreground="{ThemeResource OnSurfaceBrush}" />
                                <Run Text=" Objekte" />
                            </TextBlock>

                            <!-- Nicht eingeloggt: Anmelden + Registrieren -->
                            <StackPanel Orientation="Horizontal"
                                        Spacing="12"
                                        Visibility="{Binding IsNotAuthenticated}"
                                        AutomationProperties.AutomationId="HomePage_AuthButtons">

                                <!-- Anmelden Button -->
                                <Button Content="Anmelden"
                                        uen:Navigation.Request="Login"
                                        Style="{StaticResource TextButtonStyle}"
                                        FontSize="13"
                                        Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                        Padding="8,6"
                                        AutomationProperties.AutomationId="HomePage_LoginButton" />

                                <!-- Registrieren Button (prominent) -->
                                <Button Content="Registrieren"
                                        uen:Navigation.Request="Register"
                                        Background="{ThemeResource PrimaryButtonBackgroundBrush}"
                                        Foreground="{ThemeResource PrimaryButtonForegroundBrush}"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Padding="12,8"
                                        CornerRadius="{StaticResource RadiusSm}"
                                        AutomationProperties.AutomationId="HomePage_RegisterButton" />
                            </StackPanel>

                            <!-- Eingeloggt: Profil-Bereich -->
                            <Button Visibility="{Binding IsAuthenticated}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="4"
                                    AutomationProperties.AutomationId="HomePage_ProfileButton">
                                <Button.Flyout>
                                    <MenuFlyout Placement="BottomEdgeAlignedRight">
                                        <MenuFlyoutItem Text="Mein Profil"
                                                        AutomationProperties.AutomationId="HomePage_ProfileMenuItem">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE77B;" FontSize="14" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutSeparator />
                                        <MenuFlyoutItem Text="Abmelden"
                                                        Command="{Binding LogoutCommand}"
                                                        AutomationProperties.AutomationId="HomePage_LogoutMenuItem">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xF3B1;" FontSize="14" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Button.Flyout>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <!-- Avatar mit Initialen -->
                                    <Grid Width="32" Height="32">
                                        <Ellipse Fill="{ThemeResource PrimaryButtonBackgroundBrush}" />
                                        <TextBlock Text="{Binding UserInitials}"
                                                   Foreground="{ThemeResource PrimaryButtonForegroundBrush}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                                    </Grid>
                                    <!-- Name (nur Desktop) -->
                                    <TextBlock Text="{Binding UserFullName}"
                                               Foreground="{ThemeResource OnSurfaceBrush}"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"
                                               Visibility="{utu:Responsive Normal=Collapsed, Wide=Visible}"
                                               MaxWidth="120"
                                               TextTrimming="CharacterEllipsis" />
                                    <!-- Dropdown-Chevron -->
                                    <FontIcon Glyph="&#xE70D;"
                                              FontSize="10"
                                              Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                              VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Mobile Filter (eigene Row, bis Normal - unter 905px) -->
                <Border Grid.Row="1"
                        Background="{ThemeResource SurfaceBrush}"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="12,8"
                        Visibility="{utu:Responsive Normal=Visible, Wide=Collapsed}"
                        AutomationProperties.AutomationId="HomePage_MobileFilter">
                    <StackPanel Spacing="8">
                        <!-- OrtPicker auf Mobile -->
                        <controls:OrtPicker Bezirke="{Binding Bezirke}"
                                            SelectedOrte="{Binding SelectedOrte, Mode=TwoWay}"
                                            HorizontalAlignment="Stretch"
                                            AutomationProperties.AutomationId="HomePage_MobileOrtPicker" />

                        <!-- Filter Chips: Kurze Labels bei Mobile -->
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <controls:FilterChip Label="Alle"
                                                 IsSelected="{Binding IsAllSelected, Mode=TwoWay}" />
                            <controls:FilterChip Label="Haus"
                                                 IsSelected="{Binding IsHausSelected, Mode=TwoWay}" />
                            <controls:FilterChip Label="Grund"
                                                 IsSelected="{Binding IsGrundstueckSelected, Mode=TwoWay}" />
                            <controls:FilterChip Label="ZV"
                                                 IsSelected="{Binding IsZwangsversteigerungSelected, Mode=TwoWay}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Content: Responsives Grid Layout -->
                <ScrollViewer Grid.Row="2"
                              Padding="{utu:Responsive Narrowest='12', Normal='20,16'}"
                              AutomationProperties.AutomationId="HomePage_ScrollViewer">
                    <ItemsRepeater ItemsSource="{Binding Properties}"
                                   AutomationProperties.AutomationId="HomePage_PropertyList">
                        <ItemsRepeater.Layout>
                            <UniformGridLayout Orientation="Horizontal"
                                               MinItemWidth="280"
                                               MinItemHeight="290"
                                               MinRowSpacing="16"
                                               MinColumnSpacing="16"
                                               ItemsStretch="Fill" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <controls:PropertyCard Property="{Binding}"
                                                       CardClicked="OnPropertyCardClicked"
                                                       AutomationProperties.AutomationId="HomePage_PropertyCard" />
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>

                <!-- Empty State: Schlicht -->
                <StackPanel Grid.Row="2"
                            Visibility="{Binding IsEmpty}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Spacing="8"
                            AutomationProperties.AutomationId="HomePage_EmptyState">
                    <TextBlock Text="â€”"
                               FontSize="32"
                               Foreground="{ThemeResource OnSurfaceVariantBrush}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Keine Treffer"
                               FontSize="14"
                               Foreground="{ThemeResource OnSurfaceVariantBrush}"
                               HorizontalAlignment="Center"
                               AutomationProperties.AutomationId="HomePage_EmptyText" />
                </StackPanel>
            </Grid>
        </uc:BusyOverlay>
    </Grid>
</Page>
