<pages:BasePage x:Class="Heimatplatz.Features.Properties.Presentation.PropertyDetailPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:local="using:Heimatplatz.Features.Properties.Presentation"
                xmlns:models="using:Heimatplatz.Features.Properties.Contracts.Models"
                xmlns:utu="using:Uno.Toolkit.UI"
                xmlns:uc="using:UnoFramework.Controls"
                xmlns:pages="using:UnoFramework.Pages"
                x:Name="RootPage"
                NavigationCacheMode="Disabled">

    <!--
    PropertyDetailPage - Immobilien Detailansicht (Immoscout Style)
    -->

    <Grid Background="{ThemeResource BackgroundBrush}">
        <uc:BusyOverlay IsBusy="{x:Bind ViewModel.IsBusy, Mode=OneWay}"
                        BusyMessage="{x:Bind ViewModel.BusyMessage, Mode=OneWay}">

            <Grid>
                <!-- Content -->
                <ScrollViewer>
                    <Grid Padding="{utu:Responsive Narrowest='0', Normal='40,24'}"
                          MaxWidth="1200"
                          HorizontalAlignment="{utu:Responsive Narrowest=Stretch, Normal=Center}">

                        <!-- Mobile Layout -->
                        <Grid Visibility="{utu:Responsive Narrowest=Visible, Normal=Collapsed}">
                            <StackPanel>
                                <!-- Hero Image -->
                                <Grid Height="320">
                                    <Border Background="{ThemeResource PlaceholderBrush}">
                                        <FontIcon Glyph="&#xE722;"
                                                  FontSize="48"
                                                  Foreground="{ThemeResource DetailsBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Opacity="0.5" />
                                    </Border>
                                    <FlipView x:Name="MobileImageFlipView"
                                              ItemsSource="{x:Bind ViewModel.Property.ImageUrls, Mode=OneWay}"
                                              SelectionChanged="OnImageSelectionChanged">
                                        <FlipView.ItemTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding}"
                                                       Stretch="UniformToFill" />
                                            </DataTemplate>
                                        </FlipView.ItemTemplate>
                                    </FlipView>

                                    <!-- Gradient Overlay fuer bessere Lesbarkeit -->
                                    <Border IsHitTestVisible="False">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#50000000" Offset="0" />
                                                <GradientStop Color="#00000000" Offset="0.25" />
                                                <GradientStop Color="#00000000" Offset="0.7" />
                                                <GradientStop Color="#40000000" Offset="1" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <!-- Typ-Badge (oben links) -->
                                    <Border x:Name="MobileTypeBadge"
                                            Background="{x:Bind ViewModel.TypeBadgeBrush, Mode=OneWay}"
                                            CornerRadius="{StaticResource RadiusLg}"
                                            Padding="12,6"
                                            Margin="12"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Left">
                                        <TextBlock x:Name="MobileTypeBadgeText"
                                                   Text="{x:Bind ViewModel.TypeBadgeText, Mode=OneWay}"
                                                   FontSize="10"
                                                   FontWeight="SemiBold"
                                                   CharacterSpacing="80"
                                                   Foreground="White" />
                                    </Border>

                                    <!-- Bild Counter (links unten) -->
                                    <Border Background="#80000000"
                                            CornerRadius="{StaticResource RadiusSm}"
                                            Padding="10,6"
                                            Margin="12"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <FontIcon Glyph="&#xE8B9;"
                                                      FontSize="12"
                                                      Foreground="White" />
                                            <TextBlock FontSize="13" FontWeight="Medium" Foreground="White">
                                                <Run Text="{x:Bind ViewModel.CurrentImageIndex, Mode=OneWay}" />
                                                <Run Text="/" />
                                                <Run Text="{x:Bind ViewModel.Property.ImageUrls.Count, Mode=OneWay}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>

                                    <!-- Merken/Teilen Buttons (rechts oben) - Circular Design -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="8"
                                                Margin="12"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Right">
                                        <Button Background="#70000000"
                                                BorderThickness="0"
                                                Padding="0"
                                                Width="40"
                                                Height="40"
                                                CornerRadius="{StaticResource RadiusFull}"
                                                Visibility="{x:Bind ViewModel.IsAuthenticated, Mode=OneWay}"
                                                Command="{x:Bind ViewModel.ToggleFavoriteCommand}">
                                            <FontIcon Glyph="{x:Bind ViewModel.FavoriteButtonIcon, Mode=OneWay}"
                                                      FontSize="18"
                                                      Foreground="White" />
                                        </Button>
                                        <Button Background="#70000000"
                                                BorderThickness="0"
                                                Padding="0"
                                                Width="40"
                                                Height="40"
                                                CornerRadius="{StaticResource RadiusFull}"
                                                Command="{x:Bind ViewModel.SharePropertyCommand}">
                                            <FontIcon Glyph="&#xE72D;"
                                                      FontSize="18"
                                                      Foreground="White" />
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <!-- Content Section -->
                                <StackPanel Padding="16,24,16,24" Spacing="20" Background="{ThemeResource SurfaceBrush}">

                                    <!-- Strukturierte Datentabelle -->
                                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.DetailSections, Mode=OneWay}">
                                        <ItemsRepeater.ItemTemplate>
                                            <DataTemplate x:DataType="models:PropertyDetailSection">
                                                <StackPanel Margin="0,0,0,16">
                                                    <!-- Section Header -->
                                                    <TextBlock Text="{x:Bind Title}"
                                                               FontSize="12"
                                                               FontWeight="SemiBold"
                                                               CharacterSpacing="60"
                                                               Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                               Margin="0,0,0,8" />

                                                    <!-- Section Items -->
                                                    <Border Background="{ThemeResource SolidBackgroundFillColorSecondary}"
                                                            CornerRadius="{StaticResource RadiusLg}"
                                                            Padding="0">
                                                        <ItemsRepeater ItemsSource="{x:Bind Items}">
                                                            <ItemsRepeater.ItemTemplate>
                                                                <DataTemplate x:DataType="models:PropertyDetailItem">
                                                                    <StackPanel>
                                                                        <Grid Padding="14,10"
                                                                              ColumnSpacing="12">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*" />
                                                                                <ColumnDefinition Width="Auto" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <TextBlock Grid.Column="0"
                                                                                       Text="{x:Bind Label}"
                                                                                       FontSize="14"
                                                                                       FontWeight="SemiBold"
                                                                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                       VerticalAlignment="Center" />
                                                                            <TextBlock Grid.Column="1"
                                                                                       Text="{x:Bind Value}"
                                                                                       FontSize="14"
                                                                                       Foreground="{ThemeResource OnSurfaceBrush}"
                                                                                       VerticalAlignment="Center"
                                                                                       TextAlignment="Right" />
                                                                        </Grid>
                                                                        <!-- Trennlinie -->
                                                                        <Border Height="1"
                                                                                Background="{ThemeResource BorderBrush}"
                                                                                Opacity="0.3"
                                                                                Margin="14,0" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ItemsRepeater.ItemTemplate>
                                                        </ItemsRepeater>
                                                    </Border>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsRepeater.ItemTemplate>
                                    </ItemsRepeater>

                                    <!-- Beschreibung -->
                                    <StackPanel Spacing="8"
                                                Visibility="{x:Bind ViewModel.HasDescription, Mode=OneWay}">
                                        <TextBlock Text="BESCHREIBUNG"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   CharacterSpacing="60"
                                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                        <TextBlock Text="{x:Bind ViewModel.Description, Mode=OneWay}"
                                                   FontSize="14"
                                                   Foreground="{ThemeResource OnSurfaceBrush}"
                                                   TextWrapping="Wrap"
                                                   LineHeight="22" />
                                    </StackPanel>

                                    <!-- Features / Ausstattung -->
                                    <StackPanel Spacing="8"
                                                Visibility="{x:Bind ViewModel.HasFeatures, Mode=OneWay}">
                                        <TextBlock Text="AUSSTATTUNG &amp; MERKMALE"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   CharacterSpacing="60"
                                                   Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.FeaturesList, Mode=OneWay}">
                                            <ItemsRepeater.ItemTemplate>
                                                <DataTemplate x:DataType="x:String">
                                                    <StackPanel Orientation="Horizontal" Spacing="8" Padding="0,4">
                                                        <FontIcon Glyph="&#xE73E;"
                                                                  FontSize="14"
                                                                  Foreground="{ThemeResource AccentBrush}" />
                                                        <TextBlock Text="{x:Bind}"
                                                                   FontSize="14"
                                                                   Foreground="{ThemeResource OnSurfaceBrush}"
                                                                   VerticalAlignment="Center" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsRepeater.ItemTemplate>
                                        </ItemsRepeater>
                                    </StackPanel>

                                    <!-- Kontaktbox - Kontaktdaten direkt angezeigt -->
                                    <Border Background="{ThemeResource SurfaceBrush}"
                                            BorderBrush="{ThemeResource BorderBrush}"
                                            BorderThickness="0.5"
                                            CornerRadius="{StaticResource RadiusLg}"
                                            Padding="20"
                                            Margin="0,4,0,0"
                                            Translation="0,0,12">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="16">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Spacing="6">
                                                    <TextBlock Text="Anbieter"
                                                               FontSize="12"
                                                               Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                                    <TextBlock Text="{x:Bind ViewModel.Property.SellerName, Mode=OneWay}"
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="{ThemeResource OnSurfaceBrush}"
                                                               TextWrapping="Wrap" />
                                                    <TextBlock Text="{x:Bind ViewModel.ContactPersonText, Mode=OneWay}"
                                                               FontSize="13"
                                                               Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                               Visibility="{x:Bind ViewModel.HasContactPerson, Mode=OneWay}" />
                                                </StackPanel>

                                                <!-- Avatar/Logo -->
                                                <Border Grid.Column="1"
                                                        Width="56"
                                                        Height="56"
                                                        CornerRadius="{StaticResource RadiusFull}"
                                                        Background="{ThemeResource PlaceholderBrush}"
                                                        Margin="16,0,0,0">
                                                    <FontIcon Glyph="&#xE77B;"
                                                              FontSize="24"
                                                              Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                                </Border>
                                            </Grid>

                                            <!-- Kontaktdaten inline -->
                                            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Property.Contacts, Mode=OneWay}">
                                                <ItemsRepeater.ItemTemplate>
                                                    <DataTemplate x:DataType="models:ContactInfoDto">
                                                        <StackPanel Spacing="8" Margin="0,0,0,12">
                                                            <TextBlock Text="{x:Bind Name}"
                                                                       FontSize="14"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{ThemeResource OnSurfaceBrush}" />

                                                            <Grid Visibility="{x:Bind Email, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <FontIcon Grid.Column="0"
                                                                          Glyph="&#xE715;"
                                                                          FontSize="14"
                                                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                          Margin="0,0,8,0" />
                                                                <TextBlock Grid.Column="1"
                                                                           Text="{x:Bind Email}"
                                                                           FontSize="13"
                                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                           VerticalAlignment="Center"
                                                                           TextTrimming="CharacterEllipsis" />
                                                                <Button Grid.Column="2"
                                                                        Tag="{x:Bind Email}"
                                                                        Click="OnCopyEmailClick"
                                                                        Background="Transparent"
                                                                        Padding="8"
                                                                        ToolTipService.ToolTip="Kopieren">
                                                                    <FontIcon Glyph="&#xE8C8;" FontSize="14" />
                                                                </Button>
                                                            </Grid>

                                                            <Grid Visibility="{x:Bind Phone, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <FontIcon Grid.Column="0"
                                                                          Glyph="&#xE717;"
                                                                          FontSize="14"
                                                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                          Margin="0,0,8,0" />
                                                                <TextBlock Grid.Column="1"
                                                                           Text="{x:Bind Phone}"
                                                                           FontSize="13"
                                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                           VerticalAlignment="Center" />
                                                                <Button Grid.Column="2"
                                                                        Tag="{x:Bind Phone}"
                                                                        Click="OnCopyPhoneClick"
                                                                        Background="Transparent"
                                                                        Padding="8"
                                                                        ToolTipService.ToolTip="Kopieren">
                                                                    <FontIcon Glyph="&#xE8C8;" FontSize="14" />
                                                                </Button>
                                                            </Grid>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsRepeater.ItemTemplate>
                                            </ItemsRepeater>

                                            <TextBlock Text="{x:Bind ViewModel.CopyFeedback, Mode=OneWay}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource AccentBrush}"
                                                       HorizontalAlignment="Center"
                                                       Visibility="{x:Bind ViewModel.CopyFeedback, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}" />

                                            <!-- Zum Anbieter Button - nur bei Makler -->
                                            <Button Background="{ThemeResource OnSurfaceBrush}"
                                                    Foreground="{ThemeResource SurfaceBrush}"
                                                    FontWeight="SemiBold"
                                                    FontSize="15"
                                                    Height="48"
                                                    HorizontalAlignment="Stretch"
                                                    HorizontalContentAlignment="Center"
                                                    CornerRadius="{StaticResource RadiusMd}"
                                                    Command="{x:Bind ViewModel.OpenOriginalListingCommand}"
                                                    Visibility="{x:Bind ViewModel.IsBroker, Mode=OneWay}">
                                                <StackPanel Orientation="Horizontal" Spacing="10">
                                                    <FontIcon Glyph="&#xE8A7;"
                                                              FontSize="16"
                                                              Foreground="{ThemeResource SurfaceBrush}" />
                                                    <TextBlock Text="Zum Anbieter"
                                                               FontWeight="SemiBold"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Desktop Layout -->
                        <StackPanel Visibility="{utu:Responsive Narrowest=Collapsed, Normal=Visible}"
                                    Spacing="24">

                            <!-- Hero Image (volle Breite) mit Schatten -->
                            <Border CornerRadius="{StaticResource RadiusLg}" Height="480"
                                    Translation="0,0,16">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>
                                <Border.Clip>
                                    <RectangleGeometry Rect="0,0,10000,480" />
                                </Border.Clip>
                                <Grid>
                                    <Border Background="{ThemeResource PlaceholderBrush}"
                                            CornerRadius="{StaticResource RadiusLg}">
                                        <FontIcon Glyph="&#xE722;"
                                                  FontSize="64"
                                                  Foreground="{ThemeResource DetailsBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Opacity="0.5" />
                                    </Border>
                                    <FlipView x:Name="DesktopImageFlipView"
                                              ItemsSource="{x:Bind ViewModel.Property.ImageUrls, Mode=OneWay}"
                                              SelectionChanged="OnImageSelectionChanged">
                                        <FlipView.ItemTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding}"
                                                       Stretch="UniformToFill" />
                                            </DataTemplate>
                                        </FlipView.ItemTemplate>
                                    </FlipView>

                                    <!-- Gradient Overlay -->
                                    <Border CornerRadius="{StaticResource RadiusLg}" IsHitTestVisible="False">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#40000000" Offset="0" />
                                                <GradientStop Color="#00000000" Offset="0.2" />
                                                <GradientStop Color="#00000000" Offset="0.75" />
                                                <GradientStop Color="#30000000" Offset="1" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <!-- Typ-Badge (oben links) -->
                                    <Border x:Name="DesktopTypeBadge"
                                            Background="{x:Bind ViewModel.TypeBadgeBrush, Mode=OneWay}"
                                            CornerRadius="{StaticResource RadiusMd}"
                                            Padding="14,8"
                                            Margin="20"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Left">
                                        <TextBlock x:Name="DesktopTypeBadgeText"
                                                   Text="{x:Bind ViewModel.TypeBadgeText, Mode=OneWay}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   CharacterSpacing="80"
                                                   Foreground="White" />
                                    </Border>

                                    <!-- Bild Counter (links unten) -->
                                    <Border Background="#80000000"
                                            CornerRadius="{StaticResource RadiusMd}"
                                            Padding="12,8"
                                            Margin="20"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE8B9;"
                                                      FontSize="14"
                                                      Foreground="White" />
                                            <TextBlock FontSize="14" FontWeight="Medium" Foreground="White">
                                                <Run Text="{x:Bind ViewModel.CurrentImageIndex, Mode=OneWay}" />
                                                <Run Text="/" />
                                                <Run Text="{x:Bind ViewModel.Property.ImageUrls.Count, Mode=OneWay}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>

                                    <!-- Merken/Teilen Buttons (rechts oben) - Pill Design -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="10"
                                                Margin="20"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Right">
                                        <Button Background="#80000000"
                                                BorderThickness="0"
                                                Padding="16,10"
                                                CornerRadius="{StaticResource RadiusMd}"
                                                Visibility="{x:Bind ViewModel.IsAuthenticated, Mode=OneWay}"
                                                Command="{x:Bind ViewModel.ToggleFavoriteCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="{x:Bind ViewModel.FavoriteButtonIcon, Mode=OneWay}"
                                                          FontSize="16"
                                                          Foreground="White" />
                                                <TextBlock Text="Merken"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="White"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Button>
                                        <Button Background="#80000000"
                                                BorderThickness="0"
                                                Padding="16,10"
                                                CornerRadius="{StaticResource RadiusMd}"
                                                Command="{x:Bind ViewModel.SharePropertyCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE72D;"
                                                          FontSize="16"
                                                          Foreground="White" />
                                                <TextBlock Text="Teilen"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="White"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Content: volle Breite (Kontakt in Footer-Bar) -->
                            <StackPanel Spacing="16" Margin="0,0,0,80">

                                <!-- Strukturierte Datentabelle -->
                                <ItemsRepeater ItemsSource="{x:Bind ViewModel.DetailSections, Mode=OneWay}"
                                               Margin="0,8,0,0">
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate x:DataType="models:PropertyDetailSection">
                                            <StackPanel Margin="0,0,0,20">
                                                <!-- Section Header -->
                                                <TextBlock Text="{x:Bind Title}"
                                                           FontSize="13"
                                                           FontWeight="SemiBold"
                                                           CharacterSpacing="60"
                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                           Margin="0,0,0,10" />

                                                <!-- Section Items -->
                                                <Border Background="{ThemeResource SolidBackgroundFillColorSecondary}"
                                                        CornerRadius="{StaticResource RadiusLg}"
                                                        Padding="0">
                                                    <ItemsRepeater ItemsSource="{x:Bind Items}">
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate x:DataType="models:PropertyDetailItem">
                                                                <StackPanel>
                                                                    <Grid Padding="16,12"
                                                                          ColumnSpacing="16">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock Grid.Column="0"
                                                                                   Text="{x:Bind Label}"
                                                                                   FontSize="15"
                                                                                   FontWeight="SemiBold"
                                                                                   Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                   VerticalAlignment="Center" />
                                                                        <TextBlock Grid.Column="1"
                                                                                   Text="{x:Bind Value}"
                                                                                   FontSize="15"
                                                                                   Foreground="{ThemeResource OnSurfaceBrush}"
                                                                                   VerticalAlignment="Center"
                                                                                   TextAlignment="Right" />
                                                                    </Grid>
                                                                    <!-- Trennlinie -->
                                                                    <Border Height="1"
                                                                            Background="{ThemeResource BorderBrush}"
                                                                            Opacity="0.3"
                                                                            Margin="16,0" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>
                                                </Border>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>

                                <!-- Beschreibung -->
                                <StackPanel Spacing="10"
                                            Margin="0,4,0,0"
                                            Visibility="{x:Bind ViewModel.HasDescription, Mode=OneWay}">
                                    <TextBlock Text="BESCHREIBUNG"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               CharacterSpacing="60"
                                               Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                    <TextBlock Text="{x:Bind ViewModel.Description, Mode=OneWay}"
                                               FontSize="15"
                                               Foreground="{ThemeResource OnSurfaceBrush}"
                                               TextWrapping="Wrap"
                                               LineHeight="24" />
                                </StackPanel>

                                <!-- Features / Ausstattung -->
                                <StackPanel Spacing="10"
                                            Margin="0,4,0,0"
                                            Visibility="{x:Bind ViewModel.HasFeatures, Mode=OneWay}">
                                    <TextBlock Text="AUSSTATTUNG &amp; MERKMALE"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               CharacterSpacing="60"
                                               Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.FeaturesList, Mode=OneWay}">
                                        <ItemsRepeater.ItemTemplate>
                                            <DataTemplate x:DataType="x:String">
                                                <StackPanel Orientation="Horizontal" Spacing="10" Padding="0,5">
                                                    <FontIcon Glyph="&#xE73E;"
                                                              FontSize="15"
                                                              Foreground="{ThemeResource AccentBrush}" />
                                                    <TextBlock Text="{x:Bind}"
                                                               FontSize="15"
                                                               Foreground="{ThemeResource OnSurfaceBrush}"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsRepeater.ItemTemplate>
                                    </ItemsRepeater>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <!-- Desktop Sticky Bottom-Sheet (Kontakt) -->
                <Border VerticalAlignment="Bottom"
                        Visibility="{utu:Responsive Narrowest=Collapsed, Normal=Visible}"
                        Background="{ThemeResource SurfaceBrush}"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="0,0.5,0,0"
                        Translation="0,0,32">
                    <Border.Shadow>
                        <ThemeShadow />
                    </Border.Shadow>
                    <StackPanel MaxWidth="1200"
                                HorizontalAlignment="Center">

                        <!-- Header-Bar (immer sichtbar, klickbar) -->
                        <Button HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="40,16"
                                Command="{x:Bind ViewModel.ToggleContactExpandedCommand}">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="16">
                                <!-- Anbieter Name -->
                                <TextBlock Text="{x:Bind ViewModel.Property.SellerName, Mode=OneWay}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource OnSurfaceBrush}"
                                           VerticalAlignment="Center" />

                                <!-- Trenner -->
                                <Border Width="1"
                                        Height="16"
                                        Background="{ThemeResource BorderBrush}"
                                        Opacity="0.5"
                                        VerticalAlignment="Center" />

                                <!-- Chevron + Label -->
                                <StackPanel Orientation="Horizontal"
                                            Spacing="6"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Kontakt"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource AccentBrush}"
                                               VerticalAlignment="Center" />
                                    <FontIcon Glyph="{x:Bind ViewModel.ContactExpandIcon, Mode=OneWay}"
                                              FontSize="12"
                                              Foreground="{ThemeResource AccentBrush}" />
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- Aufklappbarer Bereich -->
                        <StackPanel Visibility="{x:Bind ViewModel.IsContactExpanded, Mode=OneWay}"
                                    Padding="40,0,40,20"
                                    Spacing="12">

                            <!-- Trennlinie -->
                            <Border Height="1"
                                    Background="{ThemeResource BorderBrush}"
                                    Opacity="0.3" />

                            <!-- Kontaktdaten (untereinander) -->
                            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Property.Contacts, Mode=OneWay}">
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="models:ContactInfoDto">
                                        <StackPanel Spacing="6" Margin="0,0,0,8">
                                            <!-- E-Mail -->
                                            <StackPanel Orientation="Horizontal"
                                                        Spacing="6"
                                                        Visibility="{x:Bind Email, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}">
                                                <FontIcon Glyph="&#xE715;"
                                                          FontSize="14"
                                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                          VerticalAlignment="Center" />
                                                <TextBlock Text="{x:Bind Email}"
                                                           FontSize="13"
                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                           VerticalAlignment="Center" />
                                                <Button Background="Transparent"
                                                        Padding="4"
                                                        MinWidth="0"
                                                        MinHeight="0"
                                                        ToolTipService.ToolTip="E-Mail kopieren"
                                                        Tag="{x:Bind Email}"
                                                        Click="OnCopyEmailClick">
                                                    <FontIcon Glyph="&#xE8C8;" FontSize="12" />
                                                </Button>
                                            </StackPanel>

                                            <!-- Telefon -->
                                            <StackPanel Orientation="Horizontal"
                                                        Spacing="6"
                                                        Visibility="{x:Bind Phone, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}">
                                                <FontIcon Glyph="&#xE717;"
                                                          FontSize="14"
                                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                          VerticalAlignment="Center" />
                                                <TextBlock Text="{x:Bind Phone}"
                                                           FontSize="13"
                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                           VerticalAlignment="Center" />
                                                <Button Background="Transparent"
                                                        Padding="4"
                                                        MinWidth="0"
                                                        MinHeight="0"
                                                        ToolTipService.ToolTip="Telefon kopieren"
                                                        Tag="{x:Bind Phone}"
                                                        Click="OnCopyPhoneClick">
                                                    <FontIcon Glyph="&#xE8C8;" FontSize="12" />
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>

                            <!-- Kopiert-Feedback -->
                            <TextBlock Text="{x:Bind ViewModel.CopyFeedback, Mode=OneWay}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource AccentBrush}"
                                       HorizontalAlignment="Center"
                                       Visibility="{x:Bind ViewModel.CopyFeedback, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}" />

                            <!-- Zum Anbieter Button (nur Makler) -->
                            <Button Background="{ThemeResource OnSurfaceBrush}"
                                    Foreground="{ThemeResource SurfaceBrush}"
                                    FontWeight="SemiBold"
                                    FontSize="14"
                                    Height="44"
                                    Padding="24,0"
                                    HorizontalAlignment="Left"
                                    CornerRadius="{StaticResource RadiusMd}"
                                    Command="{x:Bind ViewModel.OpenOriginalListingCommand}"
                                    Visibility="{x:Bind ViewModel.IsBroker, Mode=OneWay}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A7;"
                                              FontSize="14"
                                              Foreground="{ThemeResource SurfaceBrush}" />
                                    <TextBlock Text="Zum Anbieter"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </uc:BusyOverlay>
    </Grid>
</pages:BasePage>
