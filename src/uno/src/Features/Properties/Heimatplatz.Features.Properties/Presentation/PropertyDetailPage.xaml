<pages:BasePage x:Class="Heimatplatz.Features.Properties.Presentation.PropertyDetailPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:local="using:Heimatplatz.Features.Properties.Presentation"
                xmlns:models="using:Heimatplatz.Features.Properties.Contracts.Models"
                xmlns:utu="using:Uno.Toolkit.UI"
                xmlns:uc="using:UnoFramework.Controls"
                xmlns:pages="using:UnoFramework.Pages"
                x:Name="RootPage"
                NavigationCacheMode="Disabled">

    <!--
    PropertyDetailPage - Immobilien Detailansicht (Immoscout Style)
    -->

    <Grid Background="{ThemeResource BackgroundBrush}">
        <uc:BusyOverlay IsBusy="{x:Bind ViewModel.IsBusy, Mode=OneWay}"
                        BusyMessage="{x:Bind ViewModel.BusyMessage, Mode=OneWay}">

            <Grid>
                <!-- Content -->
                <ScrollViewer>
                    <Grid Padding="{utu:Responsive Narrowest='0', Normal='40,24'}"
                          MaxWidth="1200"
                          HorizontalAlignment="Center">

                        <!-- Mobile Layout -->
                        <Grid Visibility="{utu:Responsive Narrowest=Visible, Normal=Collapsed}">
                            <StackPanel>
                                <!-- Hero Image -->
                                <Grid Height="280">
                                    <Border Background="{ThemeResource PlaceholderBrush}">
                                        <FontIcon Glyph="&#xE722;"
                                                  FontSize="48"
                                                  Foreground="{ThemeResource DetailsBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                                    </Border>
                                    <FlipView x:Name="MobileImageFlipView"
                                              ItemsSource="{x:Bind ViewModel.Property.ImageUrls, Mode=OneWay}"
                                              SelectionChanged="OnImageSelectionChanged">
                                        <FlipView.ItemTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding}"
                                                       Stretch="UniformToFill" />
                                            </DataTemplate>
                                        </FlipView.ItemTemplate>
                                    </FlipView>

                                    <!-- Bild Counter (rechts unten) -->
                                    <Border Background="#99000000"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="12"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Right">
                                        <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="White">
                                            <Run Text="{x:Bind ViewModel.CurrentImageIndex, Mode=OneWay}" />
                                            <Run Text="/" />
                                            <Run Text="{x:Bind ViewModel.Property.ImageUrls.Count, Mode=OneWay}" />
                                        </TextBlock>
                                    </Border>

                                    <!-- Merken/Teilen Buttons (rechts oben) -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="8"
                                                Margin="12"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Right">
                                        <Button Background="#CC000000"
                                                BorderThickness="0"
                                                Padding="10,6"
                                                CornerRadius="4"
                                                Command="{x:Bind ViewModel.ToggleFavoriteCommand}">
                                            <FontIcon Glyph="{x:Bind ViewModel.FavoriteButtonIcon, Mode=OneWay}"
                                                      FontSize="16"
                                                      Foreground="White" />
                                        </Button>
                                        <Button Background="#CC000000"
                                                BorderThickness="0"
                                                Padding="10,6"
                                                CornerRadius="4">
                                            <FontIcon Glyph="&#xE72D;"
                                                      FontSize="16"
                                                      Foreground="White" />
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <!-- Content Section -->
                                <StackPanel Padding="16" Spacing="16" Background="{ThemeResource SurfaceBrush}">

                                    <!-- Titel -->
                                    <TextBlock Text="{x:Bind ViewModel.Property.Title, Mode=OneWay}"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource OnSurfaceBrush}"
                                               TextWrapping="Wrap" />

                                    <!-- Preis -->
                                    <TextBlock Text="{x:Bind ViewModel.FormattedPrice, Mode=OneWay}"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="{ThemeResource OnSurfaceBrush}" />

                                    <!-- Wohnfläche und Zimmer -->
                                    <TextBlock FontSize="16"
                                               Foreground="{ThemeResource OnSurfaceBrush}">
                                        <Run Text="{x:Bind ViewModel.Property.LivingAreaM2, Mode=OneWay}" />
                                        <Run Text=" m²" />
                                        <Run Text="  ·  " />
                                        <Run Text="{x:Bind ViewModel.Property.Rooms, Mode=OneWay}" />
                                        <Run Text=" Zimmer" />
                                    </TextBlock>

                                    <!-- Details Grid -->
                                    <Grid ColumnSpacing="24">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Preis / m² -->
                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock Text="Preis / m²"
                                                       FontSize="13"
                                                       Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                            <TextBlock Text="{x:Bind ViewModel.PricePerSqmText, Mode=OneWay}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource OnSurfaceBrush}" />
                                        </StackPanel>

                                        <!-- Grundstücksfläche -->
                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <TextBlock Text="Grundstücksfläche"
                                                       FontSize="13"
                                                       Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                            <TextBlock Text="{x:Bind ViewModel.PlotAreaText, Mode=OneWay}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource OnSurfaceBrush}" />
                                        </StackPanel>

                                        <!-- Baujahr -->
                                        <StackPanel Grid.Column="2" Spacing="4">
                                            <TextBlock Text="Baujahr"
                                                       FontSize="13"
                                                       Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                            <TextBlock Text="{x:Bind ViewModel.YearBuiltText, Mode=OneWay}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource OnSurfaceBrush}" />
                                        </StackPanel>
                                    </Grid>

                                    <!-- Divider -->
                                    <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

                                    <!-- Adresse -->
                                    <TextBlock Text="{x:Bind ViewModel.AddressText, Mode=OneWay}"
                                               FontSize="14"
                                               Foreground="{ThemeResource OnSurfaceBrush}" />

                                    <!-- Kontaktbox mit Button -->
                                    <Border Background="{ThemeResource SurfaceBrush}"
                                            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="20"
                                            Margin="0,8,0,0">
                                        <StackPanel Spacing="16">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Spacing="6">
                                                    <TextBlock Text="Anbieter"
                                                               FontSize="12"
                                                               Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                                    <TextBlock Text="{x:Bind ViewModel.Property.SellerName, Mode=OneWay}"
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="{ThemeResource OnSurfaceBrush}"
                                                               TextWrapping="Wrap" />
                                                    <TextBlock Text="{x:Bind ViewModel.ContactPersonText, Mode=OneWay}"
                                                               FontSize="13"
                                                               Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                               Visibility="{x:Bind ViewModel.HasContactPerson, Mode=OneWay}" />
                                                </StackPanel>

                                                <!-- Avatar/Logo -->
                                                <Border Grid.Column="1"
                                                        Width="56"
                                                        Height="56"
                                                        CornerRadius="28"
                                                        Background="{ThemeResource PlaceholderBrush}"
                                                        Margin="16,0,0,0">
                                                    <FontIcon Glyph="&#xE77B;"
                                                              FontSize="24"
                                                              Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                                </Border>
                                            </Grid>

                                            <!-- Kontaktieren Button -->
                                            <Button Background="{ThemeResource OnSurfaceBrush}"
                                                    Foreground="{ThemeResource SurfaceBrush}"
                                                    FontWeight="SemiBold"
                                                    FontSize="15"
                                                    Height="48"
                                                    HorizontalAlignment="Stretch"
                                                    HorizontalContentAlignment="Center"
                                                    CornerRadius="8">
                                                <StackPanel Orientation="Horizontal" Spacing="10">
                                                    <FontIcon Glyph="&#xE8BD;"
                                                              FontSize="16"
                                                              Foreground="{ThemeResource SurfaceBrush}" />
                                                    <TextBlock Text="Kontaktieren"
                                                               FontWeight="SemiBold"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>
                                        <Button.Flyout>
                                            <Flyout Placement="Top">
                                                <Border Background="{ThemeResource SurfaceBrush}"
                                                        CornerRadius="8"
                                                        Padding="16"
                                                        MinWidth="280"
                                                        MaxWidth="320">
                                                    <StackPanel Spacing="16">
                                                        <TextBlock Text="Kontaktdaten"
                                                                   FontSize="18"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{ThemeResource OnSurfaceBrush}" />

                                                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.Property.Contacts, Mode=OneWay}">
                                                            <ItemsRepeater.ItemTemplate>
                                                                <DataTemplate x:DataType="models:ContactInfoDto">
                                                                    <StackPanel Spacing="8" Margin="0,0,0,12">
                                                                        <TextBlock Text="{x:Bind Name}"
                                                                                   FontSize="14"
                                                                                   FontWeight="SemiBold"
                                                                                   Foreground="{ThemeResource OnSurfaceBrush}" />

                                                                        <Grid Visibility="{x:Bind Email, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="Auto" />
                                                                                <ColumnDefinition Width="*" />
                                                                                <ColumnDefinition Width="Auto" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <FontIcon Grid.Column="0"
                                                                                      Glyph="&#xE715;"
                                                                                      FontSize="14"
                                                                                      Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                      Margin="0,0,8,0" />
                                                                            <TextBlock Grid.Column="1"
                                                                                       Text="{x:Bind Email}"
                                                                                       FontSize="13"
                                                                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                       VerticalAlignment="Center"
                                                                                       TextTrimming="CharacterEllipsis" />
                                                                            <Button Grid.Column="2"
                                                                                    Tag="{x:Bind Email}"
                                                                                    Click="OnCopyEmailClick"
                                                                                    Background="Transparent"
                                                                                    Padding="8"
                                                                                    ToolTipService.ToolTip="Kopieren">
                                                                                <FontIcon Glyph="&#xE8C8;" FontSize="14" />
                                                                            </Button>
                                                                        </Grid>

                                                                        <Grid Visibility="{x:Bind Phone, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="Auto" />
                                                                                <ColumnDefinition Width="*" />
                                                                                <ColumnDefinition Width="Auto" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <FontIcon Grid.Column="0"
                                                                                      Glyph="&#xE717;"
                                                                                      FontSize="14"
                                                                                      Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                      Margin="0,0,8,0" />
                                                                            <TextBlock Grid.Column="1"
                                                                                       Text="{x:Bind Phone}"
                                                                                       FontSize="13"
                                                                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                       VerticalAlignment="Center" />
                                                                            <Button Grid.Column="2"
                                                                                    Tag="{x:Bind Phone}"
                                                                                    Click="OnCopyPhoneClick"
                                                                                    Background="Transparent"
                                                                                    Padding="8"
                                                                                    ToolTipService.ToolTip="Kopieren">
                                                                                <FontIcon Glyph="&#xE8C8;" FontSize="14" />
                                                                            </Button>
                                                                        </Grid>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ItemsRepeater.ItemTemplate>
                                                        </ItemsRepeater>

                                                        <TextBlock Text="{x:Bind ViewModel.CopyFeedback, Mode=OneWay}"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{ThemeResource AccentBrush}"
                                                                   HorizontalAlignment="Center"
                                                                   Visibility="{x:Bind ViewModel.CopyFeedback, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}" />
                                                    </StackPanel>
                                                </Border>
                                            </Flyout>
                                        </Button.Flyout>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Desktop Layout -->
                        <StackPanel Visibility="{utu:Responsive Narrowest=Collapsed, Normal=Visible}"
                                    Spacing="20">

                            <!-- Hero Image (volle Breite) -->
                            <Border CornerRadius="8" Height="420">
                                <Border.Clip>
                                    <RectangleGeometry Rect="0,0,10000,420" />
                                </Border.Clip>
                                <Grid>
                                    <Border Background="{ThemeResource PlaceholderBrush}"
                                            CornerRadius="8">
                                        <FontIcon Glyph="&#xE722;"
                                                  FontSize="64"
                                                  Foreground="{ThemeResource DetailsBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                                    </Border>
                                    <FlipView x:Name="DesktopImageFlipView"
                                              ItemsSource="{x:Bind ViewModel.Property.ImageUrls, Mode=OneWay}"
                                              SelectionChanged="OnImageSelectionChanged">
                                        <FlipView.ItemTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding}"
                                                       Stretch="UniformToFill" />
                                            </DataTemplate>
                                        </FlipView.ItemTemplate>
                                    </FlipView>

                                    <!-- Bild Counter (rechts unten) -->
                                    <Border Background="#99000000"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="16"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Right">
                                        <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="White">
                                            <Run Text="{x:Bind ViewModel.CurrentImageIndex, Mode=OneWay}" />
                                            <Run Text="/" />
                                            <Run Text="{x:Bind ViewModel.Property.ImageUrls.Count, Mode=OneWay}" />
                                        </TextBlock>
                                    </Border>

                                    <!-- Merken/Teilen Buttons (rechts oben) -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="8"
                                                Margin="16"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Right">
                                        <Button Background="#CC000000"
                                                BorderThickness="0"
                                                Padding="12,8"
                                                CornerRadius="6"
                                                Command="{x:Bind ViewModel.ToggleFavoriteCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <FontIcon Glyph="{x:Bind ViewModel.FavoriteButtonIcon, Mode=OneWay}"
                                                          FontSize="14"
                                                          Foreground="White" />
                                                <TextBlock Text="Merken"
                                                           FontSize="13"
                                                           Foreground="White"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Button>
                                        <Button Background="#CC000000"
                                                BorderThickness="0"
                                                Padding="12,8"
                                                CornerRadius="6">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <FontIcon Glyph="&#xE72D;"
                                                          FontSize="14"
                                                          Foreground="White" />
                                                <TextBlock Text="Teilen"
                                                           FontSize="13"
                                                           Foreground="White"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Content: Zwei Spalten (Infos links, Kontaktbox rechts) -->
                            <Grid ColumnSpacing="32">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="320" />
                                </Grid.ColumnDefinitions>

                                <!-- Linke Spalte: Property Infos -->
                                <StackPanel Grid.Column="0" Spacing="12">
                                    <!-- Titel -->
                                    <TextBlock Text="{x:Bind ViewModel.Property.Title, Mode=OneWay}"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource OnSurfaceBrush}"
                                               TextWrapping="Wrap" />

                                    <!-- Preis -->
                                    <TextBlock Text="{x:Bind ViewModel.FormattedPrice, Mode=OneWay}"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="{ThemeResource OnSurfaceBrush}" />

                                    <!-- Wohnfläche und Zimmer -->
                                    <TextBlock FontSize="15"
                                               Foreground="{ThemeResource OnSurfaceBrush}">
                                        <Run Text="{x:Bind ViewModel.Property.LivingAreaM2, Mode=OneWay}" />
                                        <Run Text=" m²" />
                                        <Run Text="  ·  " />
                                        <Run Text="{x:Bind ViewModel.Property.Rooms, Mode=OneWay}" />
                                        <Run Text=" Zimmer" />
                                    </TextBlock>

                                    <!-- Divider -->
                                    <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,4" />

                                    <!-- Details Grid -->
                                    <Grid ColumnSpacing="24">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Preis / m² -->
                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock Text="Preis / m²"
                                                       FontSize="13"
                                                       Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                            <TextBlock Text="{x:Bind ViewModel.PricePerSqmText, Mode=OneWay}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource OnSurfaceBrush}" />
                                        </StackPanel>

                                        <!-- Grundstücksfläche -->
                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <TextBlock Text="Grundstücksfläche"
                                                       FontSize="13"
                                                       Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                            <TextBlock Text="{x:Bind ViewModel.PlotAreaText, Mode=OneWay}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource OnSurfaceBrush}" />
                                        </StackPanel>

                                        <!-- Baujahr -->
                                        <StackPanel Grid.Column="2" Spacing="4">
                                            <TextBlock Text="Baujahr"
                                                       FontSize="13"
                                                       Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                            <TextBlock Text="{x:Bind ViewModel.YearBuiltText, Mode=OneWay}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource OnSurfaceBrush}" />
                                        </StackPanel>
                                    </Grid>

                                    <!-- Divider -->
                                    <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,4" />

                                    <!-- Adresse -->
                                    <TextBlock Text="{x:Bind ViewModel.AddressText, Mode=OneWay}"
                                               FontSize="14"
                                               Foreground="{ThemeResource OnSurfaceBrush}" />
                                </StackPanel>

                                <!-- Rechte Spalte: Kontaktbox -->
                                <Border Grid.Column="1"
                                        Background="{ThemeResource SurfaceBrush}"
                                        BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        Padding="24"
                                        Height="Auto"
                                        VerticalAlignment="Top">
                                    <StackPanel Spacing="20">
                                        <!-- Header mit Logo -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Spacing="6">
                                                <TextBlock Text="Anbieter"
                                                           FontSize="12"
                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                                <TextBlock Text="{x:Bind ViewModel.Property.SellerName, Mode=OneWay}"
                                                           FontSize="17"
                                                           FontWeight="SemiBold"
                                                           Foreground="{ThemeResource OnSurfaceBrush}"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Text="{x:Bind ViewModel.ContactPersonText, Mode=OneWay}"
                                                           FontSize="13"
                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                           Visibility="{x:Bind ViewModel.HasContactPerson, Mode=OneWay}" />
                                            </StackPanel>

                                            <!-- Avatar/Logo -->
                                            <Border Grid.Column="1"
                                                    Width="60"
                                                    Height="60"
                                                    CornerRadius="30"
                                                    Background="{ThemeResource PlaceholderBrush}"
                                                    Margin="16,0,0,0">
                                                <FontIcon Glyph="&#xE77B;"
                                                          FontSize="26"
                                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                            </Border>
                                        </Grid>

                                        <!-- Kontaktieren Button -->
                                        <Button Background="{ThemeResource OnSurfaceBrush}"
                                                Foreground="{ThemeResource SurfaceBrush}"
                                                FontWeight="SemiBold"
                                                FontSize="15"
                                                Height="48"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Center"
                                                CornerRadius="8">
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <FontIcon Glyph="&#xE8BD;"
                                                          FontSize="16"
                                                          Foreground="{ThemeResource SurfaceBrush}" />
                                                <TextBlock Text="Kontaktieren"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                            <Button.Flyout>
                                                <Flyout Placement="Bottom">
                                                    <Border Background="{ThemeResource SurfaceBrush}"
                                                            CornerRadius="8"
                                                            Padding="16"
                                                            MinWidth="280"
                                                            MaxWidth="320">
                                                        <StackPanel Spacing="16">
                                                            <TextBlock Text="Kontaktdaten"
                                                                       FontSize="18"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{ThemeResource OnSurfaceBrush}" />

                                                            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Property.Contacts, Mode=OneWay}">
                                                                <ItemsRepeater.ItemTemplate>
                                                                    <DataTemplate x:DataType="models:ContactInfoDto">
                                                                        <StackPanel Spacing="8" Margin="0,0,0,12">
                                                                            <TextBlock Text="{x:Bind Name}"
                                                                                       FontSize="14"
                                                                                       FontWeight="SemiBold"
                                                                                       Foreground="{ThemeResource OnSurfaceBrush}" />

                                                                            <Grid Visibility="{x:Bind Email, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}">
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                    <ColumnDefinition Width="*" />
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                </Grid.ColumnDefinitions>
                                                                                <FontIcon Grid.Column="0"
                                                                                          Glyph="&#xE715;"
                                                                                          FontSize="14"
                                                                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                          Margin="0,0,8,0" />
                                                                                <TextBlock Grid.Column="1"
                                                                                           Text="{x:Bind Email}"
                                                                                           FontSize="13"
                                                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                           VerticalAlignment="Center"
                                                                                           TextTrimming="CharacterEllipsis" />
                                                                                <Button Grid.Column="2"
                                                                                        Tag="{x:Bind Email}"
                                                                                        Click="OnCopyEmailClick"
                                                                                        Background="Transparent"
                                                                                        Padding="8"
                                                                                        ToolTipService.ToolTip="Kopieren">
                                                                                    <FontIcon Glyph="&#xE8C8;" FontSize="14" />
                                                                                </Button>
                                                                            </Grid>

                                                                            <Grid Visibility="{x:Bind Phone, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}">
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                    <ColumnDefinition Width="*" />
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                </Grid.ColumnDefinitions>
                                                                                <FontIcon Grid.Column="0"
                                                                                          Glyph="&#xE717;"
                                                                                          FontSize="14"
                                                                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                          Margin="0,0,8,0" />
                                                                                <TextBlock Grid.Column="1"
                                                                                           Text="{x:Bind Phone}"
                                                                                           FontSize="13"
                                                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                           VerticalAlignment="Center" />
                                                                                <Button Grid.Column="2"
                                                                                        Tag="{x:Bind Phone}"
                                                                                        Click="OnCopyPhoneClick"
                                                                                        Background="Transparent"
                                                                                        Padding="8"
                                                                                        ToolTipService.ToolTip="Kopieren">
                                                                                    <FontIcon Glyph="&#xE8C8;" FontSize="14" />
                                                                                </Button>
                                                                            </Grid>
                                                                        </StackPanel>
                                                                    </DataTemplate>
                                                                </ItemsRepeater.ItemTemplate>
                                                            </ItemsRepeater>

                                                            <TextBlock Text="{x:Bind ViewModel.CopyFeedback, Mode=OneWay}"
                                                                       FontSize="12"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{ThemeResource AccentBrush}"
                                                                       HorizontalAlignment="Center"
                                                                       Visibility="{x:Bind ViewModel.CopyFeedback, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}" />
                                                        </StackPanel>
                                                    </Border>
                                                </Flyout>
                                            </Button.Flyout>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </uc:BusyOverlay>
    </Grid>
</pages:BasePage>
