<pages:BasePage x:Class="Heimatplatz.Features.Properties.Presentation.PropertyDetailPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:local="using:Heimatplatz.Features.Properties.Presentation"
                xmlns:models="using:Heimatplatz.Features.Properties.Contracts.Models"
                xmlns:utu="using:Uno.Toolkit.UI"
                xmlns:uc="using:UnoFramework.Controls"
                xmlns:pages="using:UnoFramework.Pages"
                x:Name="RootPage"
                NavigationCacheMode="Disabled">

    <!--
    PropertyDetailPage - Immobilien Detailansicht (Immoscout Style)
    -->

    <Grid Background="{ThemeResource BackgroundBrush}">
        <uc:BusyOverlay IsBusy="{x:Bind ViewModel.IsBusy, Mode=OneWay}"
                        BusyMessage="{x:Bind ViewModel.BusyMessage, Mode=OneWay}">

            <Grid>
                <!-- Content -->
                <ScrollViewer>
                    <Grid Padding="{utu:Responsive Narrowest='0', Normal='40,24'}"
                          MaxWidth="1200"
                          HorizontalAlignment="Center">

                        <!-- Mobile Layout -->
                        <Grid Visibility="{utu:Responsive Narrowest=Visible, Normal=Collapsed}">
                            <StackPanel>
                                <!-- Hero Image -->
                                <Grid Height="320">
                                    <Border Background="{ThemeResource PlaceholderBrush}">
                                        <FontIcon Glyph="&#xE722;"
                                                  FontSize="48"
                                                  Foreground="{ThemeResource DetailsBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Opacity="0.5" />
                                    </Border>
                                    <FlipView x:Name="MobileImageFlipView"
                                              ItemsSource="{x:Bind ViewModel.Property.ImageUrls, Mode=OneWay}"
                                              SelectionChanged="OnImageSelectionChanged">
                                        <FlipView.ItemTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding}"
                                                       Stretch="UniformToFill" />
                                            </DataTemplate>
                                        </FlipView.ItemTemplate>
                                    </FlipView>

                                    <!-- Gradient Overlay fuer bessere Lesbarkeit -->
                                    <Border IsHitTestVisible="False">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#50000000" Offset="0" />
                                                <GradientStop Color="#00000000" Offset="0.25" />
                                                <GradientStop Color="#00000000" Offset="0.7" />
                                                <GradientStop Color="#40000000" Offset="1" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <!-- Typ-Badge (oben links) -->
                                    <Border x:Name="MobileTypeBadge"
                                            Background="{ThemeResource HausBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="12"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Left">
                                        <TextBlock x:Name="MobileTypeBadgeText"
                                                   Text="{x:Bind ViewModel.TypeBadgeText, Mode=OneWay}"
                                                   FontSize="10"
                                                   FontWeight="SemiBold"
                                                   CharacterSpacing="80"
                                                   Foreground="White" />
                                    </Border>

                                    <!-- Bild Counter (links unten) -->
                                    <Border Background="#80000000"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="12"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <FontIcon Glyph="&#xE8B9;"
                                                      FontSize="12"
                                                      Foreground="White" />
                                            <TextBlock FontSize="13" FontWeight="Medium" Foreground="White">
                                                <Run Text="{x:Bind ViewModel.CurrentImageIndex, Mode=OneWay}" />
                                                <Run Text="/" />
                                                <Run Text="{x:Bind ViewModel.Property.ImageUrls.Count, Mode=OneWay}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>

                                    <!-- Merken/Teilen Buttons (rechts oben) - Circular Design -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="8"
                                                Margin="12"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Right">
                                        <Button Background="#70000000"
                                                BorderThickness="0"
                                                Padding="0"
                                                Width="40"
                                                Height="40"
                                                CornerRadius="20"
                                                Command="{x:Bind ViewModel.ToggleFavoriteCommand}">
                                            <FontIcon Glyph="{x:Bind ViewModel.FavoriteButtonIcon, Mode=OneWay}"
                                                      FontSize="18"
                                                      Foreground="White" />
                                        </Button>
                                        <Button Background="#70000000"
                                                BorderThickness="0"
                                                Padding="0"
                                                Width="40"
                                                Height="40"
                                                CornerRadius="20">
                                            <FontIcon Glyph="&#xE72D;"
                                                      FontSize="18"
                                                      Foreground="White" />
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <!-- Content Section -->
                                <StackPanel Padding="20,24" Spacing="20" Background="{ThemeResource SurfaceBrush}">

                                    <!-- Titel und Adresse -->
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="{x:Bind ViewModel.Property.Title, Mode=OneWay}"
                                                   FontSize="22"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource OnSurfaceBrush}"
                                                   TextWrapping="Wrap" />

                                        <!-- Adresse mit Icon -->
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <FontIcon Glyph="&#xE81D;"
                                                      FontSize="14"
                                                      Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                            <TextBlock Text="{x:Bind ViewModel.AddressText, Mode=OneWay}"
                                                       FontSize="14"
                                                       Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Preis prominent -->
                                    <TextBlock Text="{x:Bind ViewModel.FormattedPrice, Mode=OneWay}"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="{ThemeResource OnSurfaceBrush}" />

                                    <!-- Wohnfläche und Zimmer Tags (nur bei Haus) -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="12"
                                                Visibility="{x:Bind ViewModel.IsHouseType, Mode=OneWay}">
                                        <Border Background="{ThemeResource SolidBackgroundFillColorSecondary}"
                                                CornerRadius="6"
                                                Padding="12,8">
                                            <TextBlock FontSize="14" Foreground="{ThemeResource OnSurfaceBrush}">
                                                <Run Text="{x:Bind ViewModel.Property.LivingAreaM2, Mode=OneWay}" FontWeight="SemiBold" />
                                                <Run Text=" m² Wfl." />
                                            </TextBlock>
                                        </Border>
                                        <Border Background="{ThemeResource SolidBackgroundFillColorSecondary}"
                                                CornerRadius="6"
                                                Padding="12,8">
                                            <TextBlock FontSize="14" Foreground="{ThemeResource OnSurfaceBrush}">
                                                <Run Text="{x:Bind ViewModel.Property.Rooms, Mode=OneWay}" FontWeight="SemiBold" />
                                                <Run Text=" Zimmer" />
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>

                                    <!-- Details Cards -->
                                    <Border Background="{ThemeResource SolidBackgroundFillColorSecondary}"
                                            CornerRadius="12"
                                            Padding="16">
                                        <Grid RowSpacing="16">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Grundstücksfläche -->
                                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                                                <TextBlock Text="Grundstück"
                                                           FontSize="12"
                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                                <TextBlock Text="{x:Bind ViewModel.PlotAreaText, Mode=OneWay}"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="{ThemeResource OnSurfaceBrush}" />
                                            </StackPanel>

                                            <!-- Preis / m² (nur bei Haus) -->
                                            <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4"
                                                        Visibility="{x:Bind ViewModel.IsHouseType, Mode=OneWay}">
                                                <TextBlock Text="Preis / m²"
                                                           FontSize="12"
                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                                <TextBlock Text="{x:Bind ViewModel.PricePerSqmText, Mode=OneWay}"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="{ThemeResource OnSurfaceBrush}" />
                                            </StackPanel>

                                            <!-- Baujahr (nur bei Haus) -->
                                            <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4"
                                                        Visibility="{x:Bind ViewModel.IsHouseType, Mode=OneWay}">
                                                <TextBlock Text="Baujahr"
                                                           FontSize="12"
                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                                <TextBlock Text="{x:Bind ViewModel.YearBuiltText, Mode=OneWay}"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="{ThemeResource OnSurfaceBrush}" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Kontaktbox mit Button - verbessert mit Schatten -->
                                    <Border Background="{ThemeResource SurfaceBrush}"
                                            BorderBrush="{ThemeResource BorderBrush}"
                                            BorderThickness="0.5"
                                            CornerRadius="16"
                                            Padding="20"
                                            Margin="0,4,0,0"
                                            Translation="0,0,12">
                                        <Border.Shadow>
                                            <ThemeShadow />
                                        </Border.Shadow>
                                        <StackPanel Spacing="16">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Spacing="6">
                                                    <TextBlock Text="Anbieter"
                                                               FontSize="12"
                                                               Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                                    <TextBlock Text="{x:Bind ViewModel.Property.SellerName, Mode=OneWay}"
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="{ThemeResource OnSurfaceBrush}"
                                                               TextWrapping="Wrap" />
                                                    <TextBlock Text="{x:Bind ViewModel.ContactPersonText, Mode=OneWay}"
                                                               FontSize="13"
                                                               Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                               Visibility="{x:Bind ViewModel.HasContactPerson, Mode=OneWay}" />
                                                </StackPanel>

                                                <!-- Avatar/Logo -->
                                                <Border Grid.Column="1"
                                                        Width="56"
                                                        Height="56"
                                                        CornerRadius="28"
                                                        Background="{ThemeResource PlaceholderBrush}"
                                                        Margin="16,0,0,0">
                                                    <FontIcon Glyph="&#xE77B;"
                                                              FontSize="24"
                                                              Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                                </Border>
                                            </Grid>

                                            <!-- Kontaktieren Button -->
                                            <Button Background="{ThemeResource OnSurfaceBrush}"
                                                    Foreground="{ThemeResource SurfaceBrush}"
                                                    FontWeight="SemiBold"
                                                    FontSize="15"
                                                    Height="48"
                                                    HorizontalAlignment="Stretch"
                                                    HorizontalContentAlignment="Center"
                                                    CornerRadius="8">
                                                <StackPanel Orientation="Horizontal" Spacing="10">
                                                    <FontIcon Glyph="&#xE8BD;"
                                                              FontSize="16"
                                                              Foreground="{ThemeResource SurfaceBrush}" />
                                                    <TextBlock Text="Kontaktieren"
                                                               FontWeight="SemiBold"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>
                                        <Button.Flyout>
                                            <Flyout Placement="Top">
                                                <Border Background="{ThemeResource SurfaceBrush}"
                                                        CornerRadius="8"
                                                        Padding="16"
                                                        MinWidth="280"
                                                        MaxWidth="320">
                                                    <StackPanel Spacing="16">
                                                        <TextBlock Text="Kontaktdaten"
                                                                   FontSize="18"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{ThemeResource OnSurfaceBrush}" />

                                                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.Property.Contacts, Mode=OneWay}">
                                                            <ItemsRepeater.ItemTemplate>
                                                                <DataTemplate x:DataType="models:ContactInfoDto">
                                                                    <StackPanel Spacing="8" Margin="0,0,0,12">
                                                                        <TextBlock Text="{x:Bind Name}"
                                                                                   FontSize="14"
                                                                                   FontWeight="SemiBold"
                                                                                   Foreground="{ThemeResource OnSurfaceBrush}" />

                                                                        <Grid Visibility="{x:Bind Email, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="Auto" />
                                                                                <ColumnDefinition Width="*" />
                                                                                <ColumnDefinition Width="Auto" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <FontIcon Grid.Column="0"
                                                                                      Glyph="&#xE715;"
                                                                                      FontSize="14"
                                                                                      Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                      Margin="0,0,8,0" />
                                                                            <TextBlock Grid.Column="1"
                                                                                       Text="{x:Bind Email}"
                                                                                       FontSize="13"
                                                                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                       VerticalAlignment="Center"
                                                                                       TextTrimming="CharacterEllipsis" />
                                                                            <Button Grid.Column="2"
                                                                                    Tag="{x:Bind Email}"
                                                                                    Click="OnCopyEmailClick"
                                                                                    Background="Transparent"
                                                                                    Padding="8"
                                                                                    ToolTipService.ToolTip="Kopieren">
                                                                                <FontIcon Glyph="&#xE8C8;" FontSize="14" />
                                                                            </Button>
                                                                        </Grid>

                                                                        <Grid Visibility="{x:Bind Phone, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="Auto" />
                                                                                <ColumnDefinition Width="*" />
                                                                                <ColumnDefinition Width="Auto" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <FontIcon Grid.Column="0"
                                                                                      Glyph="&#xE717;"
                                                                                      FontSize="14"
                                                                                      Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                      Margin="0,0,8,0" />
                                                                            <TextBlock Grid.Column="1"
                                                                                       Text="{x:Bind Phone}"
                                                                                       FontSize="13"
                                                                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                       VerticalAlignment="Center" />
                                                                            <Button Grid.Column="2"
                                                                                    Tag="{x:Bind Phone}"
                                                                                    Click="OnCopyPhoneClick"
                                                                                    Background="Transparent"
                                                                                    Padding="8"
                                                                                    ToolTipService.ToolTip="Kopieren">
                                                                                <FontIcon Glyph="&#xE8C8;" FontSize="14" />
                                                                            </Button>
                                                                        </Grid>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ItemsRepeater.ItemTemplate>
                                                        </ItemsRepeater>

                                                        <TextBlock Text="{x:Bind ViewModel.CopyFeedback, Mode=OneWay}"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{ThemeResource AccentBrush}"
                                                                   HorizontalAlignment="Center"
                                                                   Visibility="{x:Bind ViewModel.CopyFeedback, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}" />
                                                    </StackPanel>
                                                </Border>
                                            </Flyout>
                                        </Button.Flyout>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Desktop Layout -->
                        <StackPanel Visibility="{utu:Responsive Narrowest=Collapsed, Normal=Visible}"
                                    Spacing="24">

                            <!-- Hero Image (volle Breite) mit Schatten -->
                            <Border CornerRadius="12" Height="480"
                                    Translation="0,0,16">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>
                                <Border.Clip>
                                    <RectangleGeometry Rect="0,0,10000,480" />
                                </Border.Clip>
                                <Grid>
                                    <Border Background="{ThemeResource PlaceholderBrush}"
                                            CornerRadius="12">
                                        <FontIcon Glyph="&#xE722;"
                                                  FontSize="64"
                                                  Foreground="{ThemeResource DetailsBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Opacity="0.5" />
                                    </Border>
                                    <FlipView x:Name="DesktopImageFlipView"
                                              ItemsSource="{x:Bind ViewModel.Property.ImageUrls, Mode=OneWay}"
                                              SelectionChanged="OnImageSelectionChanged">
                                        <FlipView.ItemTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding}"
                                                       Stretch="UniformToFill" />
                                            </DataTemplate>
                                        </FlipView.ItemTemplate>
                                    </FlipView>

                                    <!-- Gradient Overlay -->
                                    <Border CornerRadius="12" IsHitTestVisible="False">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#40000000" Offset="0" />
                                                <GradientStop Color="#00000000" Offset="0.2" />
                                                <GradientStop Color="#00000000" Offset="0.75" />
                                                <GradientStop Color="#30000000" Offset="1" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <!-- Typ-Badge (oben links) -->
                                    <Border x:Name="DesktopTypeBadge"
                                            Background="{ThemeResource HausBrush}"
                                            CornerRadius="14"
                                            Padding="14,8"
                                            Margin="20"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Left">
                                        <TextBlock x:Name="DesktopTypeBadgeText"
                                                   Text="{x:Bind ViewModel.TypeBadgeText, Mode=OneWay}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   CharacterSpacing="80"
                                                   Foreground="White" />
                                    </Border>

                                    <!-- Bild Counter (links unten) -->
                                    <Border Background="#80000000"
                                            CornerRadius="6"
                                            Padding="12,8"
                                            Margin="20"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE8B9;"
                                                      FontSize="14"
                                                      Foreground="White" />
                                            <TextBlock FontSize="14" FontWeight="Medium" Foreground="White">
                                                <Run Text="{x:Bind ViewModel.CurrentImageIndex, Mode=OneWay}" />
                                                <Run Text="/" />
                                                <Run Text="{x:Bind ViewModel.Property.ImageUrls.Count, Mode=OneWay}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>

                                    <!-- Merken/Teilen Buttons (rechts oben) - Pill Design -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="10"
                                                Margin="20"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Right">
                                        <Button Background="#80000000"
                                                BorderThickness="0"
                                                Padding="16,10"
                                                CornerRadius="20"
                                                Command="{x:Bind ViewModel.ToggleFavoriteCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="{x:Bind ViewModel.FavoriteButtonIcon, Mode=OneWay}"
                                                          FontSize="16"
                                                          Foreground="White" />
                                                <TextBlock Text="Merken"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="White"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Button>
                                        <Button Background="#80000000"
                                                BorderThickness="0"
                                                Padding="16,10"
                                                CornerRadius="20">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE72D;"
                                                          FontSize="16"
                                                          Foreground="White" />
                                                <TextBlock Text="Teilen"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="White"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Content: Zwei Spalten (Infos links, Kontaktbox rechts) -->
                            <Grid ColumnSpacing="40">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="360" />
                                </Grid.ColumnDefinitions>

                                <!-- Linke Spalte: Property Infos -->
                                <StackPanel Grid.Column="0" Spacing="16">
                                    <!-- Titel und Adresse -->
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="{x:Bind ViewModel.Property.Title, Mode=OneWay}"
                                                   FontSize="26"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource OnSurfaceBrush}"
                                                   TextWrapping="Wrap" />

                                        <!-- Adresse mit Icon -->
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE81D;"
                                                      FontSize="16"
                                                      Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                            <TextBlock Text="{x:Bind ViewModel.AddressText, Mode=OneWay}"
                                                       FontSize="15"
                                                       Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Preis prominent -->
                                    <TextBlock Text="{x:Bind ViewModel.FormattedPrice, Mode=OneWay}"
                                               FontSize="36"
                                               FontWeight="Bold"
                                               Foreground="{ThemeResource OnSurfaceBrush}" />

                                    <!-- Wohnfläche und Zimmer Tags (nur bei Haus) -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="12"
                                                Visibility="{x:Bind ViewModel.IsHouseType, Mode=OneWay}">
                                        <Border Background="{ThemeResource SolidBackgroundFillColorSecondary}"
                                                CornerRadius="8"
                                                Padding="14,10">
                                            <TextBlock FontSize="15" Foreground="{ThemeResource OnSurfaceBrush}">
                                                <Run Text="{x:Bind ViewModel.Property.LivingAreaM2, Mode=OneWay}" FontWeight="SemiBold" />
                                                <Run Text=" m² Wohnfläche" />
                                            </TextBlock>
                                        </Border>
                                        <Border Background="{ThemeResource SolidBackgroundFillColorSecondary}"
                                                CornerRadius="8"
                                                Padding="14,10">
                                            <TextBlock FontSize="15" Foreground="{ThemeResource OnSurfaceBrush}">
                                                <Run Text="{x:Bind ViewModel.Property.Rooms, Mode=OneWay}" FontWeight="SemiBold" />
                                                <Run Text=" Zimmer" />
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>

                                    <!-- Details Cards -->
                                    <Border Background="{ThemeResource SolidBackgroundFillColorSecondary}"
                                            CornerRadius="12"
                                            Padding="20"
                                            Margin="0,8,0,0">
                                        <Grid ColumnSpacing="32" RowSpacing="20">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Grundstücksfläche -->
                                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                                                <TextBlock Text="Grundstück"
                                                           FontSize="13"
                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                                <TextBlock Text="{x:Bind ViewModel.PlotAreaText, Mode=OneWay}"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Foreground="{ThemeResource OnSurfaceBrush}" />
                                            </StackPanel>

                                            <!-- Preis / m² (nur bei Haus) -->
                                            <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4"
                                                        Visibility="{x:Bind ViewModel.IsHouseType, Mode=OneWay}">
                                                <TextBlock Text="Preis / m²"
                                                           FontSize="13"
                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                                <TextBlock Text="{x:Bind ViewModel.PricePerSqmText, Mode=OneWay}"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Foreground="{ThemeResource OnSurfaceBrush}" />
                                            </StackPanel>

                                            <!-- Baujahr (nur bei Haus) -->
                                            <StackPanel Grid.Row="0" Grid.Column="2" Spacing="4"
                                                        Visibility="{x:Bind ViewModel.IsHouseType, Mode=OneWay}">
                                                <TextBlock Text="Baujahr"
                                                           FontSize="13"
                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                                <TextBlock Text="{x:Bind ViewModel.YearBuiltText, Mode=OneWay}"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Foreground="{ThemeResource OnSurfaceBrush}" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Rechte Spalte: Kontaktbox - mit Schatten -->
                                <Border Grid.Column="1"
                                        Background="{ThemeResource SurfaceBrush}"
                                        BorderBrush="{ThemeResource BorderBrush}"
                                        BorderThickness="0.5"
                                        CornerRadius="16"
                                        Padding="28"
                                        Height="Auto"
                                        VerticalAlignment="Top"
                                        Translation="0,0,16">
                                    <Border.Shadow>
                                        <ThemeShadow />
                                    </Border.Shadow>
                                    <StackPanel Spacing="24">
                                        <!-- Header mit Logo -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Spacing="6">
                                                <TextBlock Text="Anbieter"
                                                           FontSize="12"
                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                                <TextBlock Text="{x:Bind ViewModel.Property.SellerName, Mode=OneWay}"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Foreground="{ThemeResource OnSurfaceBrush}"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Text="{x:Bind ViewModel.ContactPersonText, Mode=OneWay}"
                                                           FontSize="14"
                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                           Visibility="{x:Bind ViewModel.HasContactPerson, Mode=OneWay}" />
                                            </StackPanel>

                                            <!-- Avatar/Logo -->
                                            <Border Grid.Column="1"
                                                    Width="64"
                                                    Height="64"
                                                    CornerRadius="32"
                                                    Background="{ThemeResource PlaceholderBrush}"
                                                    Margin="16,0,0,0">
                                                <FontIcon Glyph="&#xE77B;"
                                                          FontSize="28"
                                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                            </Border>
                                        </Grid>

                                        <!-- Kontaktieren Button -->
                                        <Button Background="{ThemeResource OnSurfaceBrush}"
                                                Foreground="{ThemeResource SurfaceBrush}"
                                                FontWeight="SemiBold"
                                                FontSize="15"
                                                Height="48"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Center"
                                                CornerRadius="8">
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <FontIcon Glyph="&#xE8BD;"
                                                          FontSize="16"
                                                          Foreground="{ThemeResource SurfaceBrush}" />
                                                <TextBlock Text="Kontaktieren"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                            <Button.Flyout>
                                                <Flyout Placement="Bottom">
                                                    <Border Background="{ThemeResource SurfaceBrush}"
                                                            CornerRadius="8"
                                                            Padding="16"
                                                            MinWidth="280"
                                                            MaxWidth="320">
                                                        <StackPanel Spacing="16">
                                                            <TextBlock Text="Kontaktdaten"
                                                                       FontSize="18"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{ThemeResource OnSurfaceBrush}" />

                                                            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Property.Contacts, Mode=OneWay}">
                                                                <ItemsRepeater.ItemTemplate>
                                                                    <DataTemplate x:DataType="models:ContactInfoDto">
                                                                        <StackPanel Spacing="8" Margin="0,0,0,12">
                                                                            <TextBlock Text="{x:Bind Name}"
                                                                                       FontSize="14"
                                                                                       FontWeight="SemiBold"
                                                                                       Foreground="{ThemeResource OnSurfaceBrush}" />

                                                                            <Grid Visibility="{x:Bind Email, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}">
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                    <ColumnDefinition Width="*" />
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                </Grid.ColumnDefinitions>
                                                                                <FontIcon Grid.Column="0"
                                                                                          Glyph="&#xE715;"
                                                                                          FontSize="14"
                                                                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                          Margin="0,0,8,0" />
                                                                                <TextBlock Grid.Column="1"
                                                                                           Text="{x:Bind Email}"
                                                                                           FontSize="13"
                                                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                           VerticalAlignment="Center"
                                                                                           TextTrimming="CharacterEllipsis" />
                                                                                <Button Grid.Column="2"
                                                                                        Tag="{x:Bind Email}"
                                                                                        Click="OnCopyEmailClick"
                                                                                        Background="Transparent"
                                                                                        Padding="8"
                                                                                        ToolTipService.ToolTip="Kopieren">
                                                                                    <FontIcon Glyph="&#xE8C8;" FontSize="14" />
                                                                                </Button>
                                                                            </Grid>

                                                                            <Grid Visibility="{x:Bind Phone, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}">
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                    <ColumnDefinition Width="*" />
                                                                                    <ColumnDefinition Width="Auto" />
                                                                                </Grid.ColumnDefinitions>
                                                                                <FontIcon Grid.Column="0"
                                                                                          Glyph="&#xE717;"
                                                                                          FontSize="14"
                                                                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                          Margin="0,0,8,0" />
                                                                                <TextBlock Grid.Column="1"
                                                                                           Text="{x:Bind Phone}"
                                                                                           FontSize="13"
                                                                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                           VerticalAlignment="Center" />
                                                                                <Button Grid.Column="2"
                                                                                        Tag="{x:Bind Phone}"
                                                                                        Click="OnCopyPhoneClick"
                                                                                        Background="Transparent"
                                                                                        Padding="8"
                                                                                        ToolTipService.ToolTip="Kopieren">
                                                                                    <FontIcon Glyph="&#xE8C8;" FontSize="14" />
                                                                                </Button>
                                                                            </Grid>
                                                                        </StackPanel>
                                                                    </DataTemplate>
                                                                </ItemsRepeater.ItemTemplate>
                                                            </ItemsRepeater>

                                                            <TextBlock Text="{x:Bind ViewModel.CopyFeedback, Mode=OneWay}"
                                                                       FontSize="12"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{ThemeResource AccentBrush}"
                                                                       HorizontalAlignment="Center"
                                                                       Visibility="{x:Bind ViewModel.CopyFeedback, Converter={StaticResource NullToCollapsedConverter}, Mode=OneWay}" />
                                                        </StackPanel>
                                                    </Border>
                                                </Flyout>
                                            </Button.Flyout>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </uc:BusyOverlay>
    </Grid>
</pages:BasePage>
