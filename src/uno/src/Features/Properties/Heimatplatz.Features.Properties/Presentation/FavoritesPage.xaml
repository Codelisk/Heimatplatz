<Page x:Class="Heimatplatz.Features.Properties.Presentation.FavoritesPage"
      x:Name="RootPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Heimatplatz.Features.Properties.Presentation"
      xmlns:controls="using:Heimatplatz.Features.Properties.Controls"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:uc="using:UnoFramework.Controls"
      NavigationCacheMode="Disabled">

    <!--
    FavoritesPage - User's Favorited Properties
    Zeigt alle favorisierten Immobilien des eingeloggten Kaeufers
    -->

    <Grid Background="{ThemeResource BackgroundBrush}">

        <uc:BusyOverlay IsBusy="{Binding IsBusy}"
                        BusyMessage="{Binding BusyMessage}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0"
                        Background="{ThemeResource SurfaceBrush}"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="{utu:Responsive Narrowest='16,12', Normal='24,16'}">
                    <TextBlock Text="Meine Favoriten"
                               Style="{StaticResource TitleLargeTextBlockStyle}"
                               FontWeight="SemiBold" />
                </Border>

                <!-- Content Area -->
                <ScrollViewer Grid.Row="1">
                    <utu:AutoLayout Orientation="Vertical"
                                    Spacing="16"
                                    Padding="{utu:Responsive Narrowest='16', Normal='24,24,24,40'}">

                        <!-- Empty State -->
                        <StackPanel Visibility="{Binding IsEmpty, FallbackValue=Collapsed}"
                                    Spacing="16"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Padding="0,80,0,0">

                            <FontIcon Glyph="&#xE734;"
                                      FontSize="64"
                                      Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                      HorizontalAlignment="Center" />

                            <TextBlock Text="Noch keine Favoriten"
                                       Style="{StaticResource TitleMediumTextBlockStyle}"
                                       Foreground="{ThemeResource OnSurfaceBrush}"
                                       HorizontalAlignment="Center" />

                            <TextBlock Text="Markieren Sie Immobilien als Favoriten, um sie hier zu sehen"
                                       Style="{StaticResource BodyMediumTextBlockStyle}"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       MaxWidth="400"
                                       Margin="0,0,0,24" />
                        </StackPanel>

                        <!-- Favorites Grid -->
                        <ItemsRepeater ItemsSource="{Binding Properties}"
                                       Visibility="{Binding IsNotEmpty, FallbackValue=Collapsed}">
                            <ItemsRepeater.Layout>
                                <UniformGridLayout MinItemWidth="{utu:Responsive Narrowest=300, Normal=320, Wide=340}"
                                                   ItemsStretch="Fill"
                                                   MinRowSpacing="16"
                                                   MinColumnSpacing="16" />
                            </ItemsRepeater.Layout>

                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <!-- Property Card -->
                                        <controls:PropertyCard Property="{Binding}"
                                                               Margin="0" />

                                        <!-- Remove Favorite Button Overlay -->
                                        <Border Background="{ThemeResource SurfaceBrush}"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                CornerRadius="{StaticResource ControlCornerRadius}"
                                                Margin="8"
                                                Padding="4"
                                                BorderBrush="{ThemeResource OutlineBrush}"
                                                BorderThickness="1">
                                            <Border.Shadow>
                                                <ThemeShadow />
                                            </Border.Shadow>

                                            <Button Style="{StaticResource IconButtonStyle}"
                                                    Command="{Binding DataContext.RemoveFromCollectionCommand, ElementName=RootPage}"
                                                    CommandParameter="{Binding}"
                                                    ToolTipService.ToolTip="Aus Favoriten entfernen"
                                                    Width="36"
                                                    Height="36"
                                                    Padding="0">
                                                <FontIcon Glyph="&#xE735;"
                                                          FontSize="16"
                                                          Foreground="{ThemeResource ErrorBrush}" />
                                            </Button>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>

                    </utu:AutoLayout>
                </ScrollViewer>

            </Grid>

        </uc:BusyOverlay>

    </Grid>

</Page>
