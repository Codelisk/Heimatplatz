<pages:BasePage x:Class="Heimatplatz.Features.Properties.Presentation.MyPropertiesPage"
      x:Name="RootPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Heimatplatz.Features.Properties.Presentation"
      xmlns:controls="using:Heimatplatz.Features.Properties.Controls"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:uc="using:UnoFramework.Controls"
      xmlns:pages="using:UnoFramework.Pages"
      NavigationCacheMode="Disabled">

    <!--
    MyPropertiesPage - User Property Management
    Zeigt alle Immobilien des eingeloggten Users
    -->

    <Grid Background="{ThemeResource BackgroundBrush}">

        <uc:BusyOverlay IsBusy="{Binding IsBusy}"
                        BusyMessage="{Binding BusyMessage}">

            <Grid>
                <!-- Empty State - Modern Card Design (Full screen centered) -->
                <Grid Visibility="{Binding IsEmpty, FallbackValue=Collapsed}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Border HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            MaxWidth="420"
                            Background="{ThemeResource SurfaceBrush}"
                            CornerRadius="24"
                            Padding="48,56"
                            Translation="0,0,8">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>

                        <StackPanel Spacing="24" HorizontalAlignment="Center">

                            <!-- Illustrative Icon Circle -->
                            <Grid Width="120" Height="120" HorizontalAlignment="Center">
                                <!-- Outer Ring -->
                                <Ellipse Fill="{ThemeResource PrimaryContainerBrush}"
                                         Opacity="0.3" />
                                <!-- Inner Circle -->
                                <Ellipse Width="88" Height="88"
                                         Fill="{ThemeResource PrimaryContainerBrush}"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center" />
                                <!-- Icon -->
                                <FontIcon Glyph="&#xE80F;"
                                          FontSize="40"
                                          Foreground="{ThemeResource PrimaryBrush}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                            </Grid>

                            <!-- Text Content -->
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <TextBlock Text="Noch keine Immobilien"
                                           Style="{StaticResource TitleLargeTextBlockStyle}"
                                           Foreground="{ThemeResource OnSurfaceBrush}"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center" />

                                <TextBlock Text="Inserieren Sie Ihre erste Immobilie und erreichen Sie tausende potenzielle KÃ¤ufer"
                                           Style="{StaticResource BodyMediumTextBlockStyle}"
                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           MaxWidth="300" />
                            </StackPanel>

                            <!-- CTA Button -->
                            <Button Style="{StaticResource FilledButtonStyle}"
                                    Command="{Binding NavigateToAddPropertyCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="24,14">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <FontIcon Glyph="&#xE710;" FontSize="18" />
                                    <TextBlock Text="Erste Immobilie inserieren"
                                               Style="{StaticResource BodyLargeTextBlockStyle}" />
                                </StackPanel>
                            </Button>

                            <!-- Subtle Hint -->
                            <TextBlock Text="Kostenlos und in wenigen Minuten"
                                       Style="{StaticResource LabelSmallTextBlockStyle}"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                       Opacity="0.7"
                                       HorizontalAlignment="Center" />

                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Content Area with Properties -->
                <ScrollViewer Visibility="{Binding IsNotEmpty, FallbackValue=Collapsed}">
                    <utu:AutoLayout Orientation="Vertical"
                                    Spacing="16"
                                    Padding="{utu:Responsive Narrowest='16', Normal='24,24,24,40'}">

                        <!-- Properties Grid -->
                        <ItemsRepeater ItemsSource="{Binding Properties}">
                            <ItemsRepeater.Layout>
                                <UniformGridLayout Orientation="Horizontal"
                                                   MinItemWidth="240"
                                                   MinItemHeight="330"
                                                   MinRowSpacing="16"
                                                   MinColumnSpacing="16"
                                                   ItemsStretch="Fill" />
                            </ItemsRepeater.Layout>

                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <controls:PropertyCard Property="{Binding}"
                                                           Mode="Owner"
                                                           CardClickedCommand="{Binding DataContext.EditPropertyCommand, ElementName=RootPage}"
                                                           DeleteCommand="{Binding DataContext.DeletePropertyCommand, ElementName=RootPage}"
                                                           Margin="0" />
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>

                    </utu:AutoLayout>
                </ScrollViewer>
            </Grid>

        </uc:BusyOverlay>

    </Grid>

</pages:BasePage>
