<Page x:Class="Heimatplatz.Features.Properties.Presentation.MyPropertiesPage"
      x:Name="RootPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Heimatplatz.Features.Properties.Presentation"
      xmlns:controls="using:Heimatplatz.Features.Properties.Controls"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:uc="using:UnoFramework.Controls"
      NavigationCacheMode="Required">

    <!--
    MyPropertiesPage - User Property Management
    Zeigt alle Immobilien des eingeloggten Users
    -->

    <Grid Background="{ThemeResource BackgroundBrush}">

        <uc:BusyOverlay IsBusy="{Binding IsBusy}"
                        BusyMessage="{Binding BusyMessage}">

            <Grid utu:SafeArea.Insets="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0"
                        Background="{ThemeResource SurfaceBrush}"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="{utu:Responsive Narrowest='16,12', Normal='24,16'}">
                    <TextBlock Text="Meine Immobilien"
                               Style="{StaticResource TitleLargeTextBlockStyle}"
                               FontWeight="SemiBold" />
                </Border>

                <!-- Content Area -->
                <ScrollViewer Grid.Row="1">
                    <utu:AutoLayout Orientation="Vertical"
                                    Spacing="16"
                                    Padding="{utu:Responsive Narrowest='16', Normal='24,24,24,40'}">

                        <!-- Empty State -->
                        <StackPanel Visibility="{Binding IsEmpty}"
                                    Spacing="16"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Padding="0,80,0,0">

                            <FontIcon Glyph="&#xE80F;"
                                      FontSize="64"
                                      Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                      HorizontalAlignment="Center" />

                            <TextBlock Text="Noch keine Immobilien"
                                       Style="{StaticResource TitleMediumTextBlockStyle}"
                                       Foreground="{ThemeResource OnSurfaceBrush}"
                                       HorizontalAlignment="Center" />

                            <TextBlock Text="Erstellen Sie Ihr erstes Inserat"
                                       Style="{StaticResource BodyMediumTextBlockStyle}"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,24" />

                            <Button Style="{StaticResource FilledButtonStyle}"
                                    Command="{Binding NavigateToAddPropertyCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE710;" FontSize="16" />
                                    <TextBlock Text="Immobilie inserieren" />
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Properties Grid -->
                        <ItemsRepeater ItemsSource="{Binding Properties}"
                                       Visibility="{Binding IsNotEmpty}">
                            <ItemsRepeater.Layout>
                                <UniformGridLayout MinItemWidth="{utu:Responsive Narrowest=300, Normal=320, Wide=340}"
                                                   ItemsStretch="Fill"
                                                   MinRowSpacing="16"
                                                   MinColumnSpacing="16" />
                            </ItemsRepeater.Layout>

                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <!-- Property Card -->
                                        <controls:PropertyCard Property="{Binding}"
                                                               Margin="0" />

                                        <!-- Action Buttons Overlay -->
                                        <Border Background="{ThemeResource SurfaceBrush}"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                CornerRadius="{StaticResource ControlCornerRadius}"
                                                Margin="8"
                                                Padding="4"
                                                BorderBrush="{ThemeResource OutlineBrush}"
                                                BorderThickness="1">
                                            <Border.Shadow>
                                                <ThemeShadow />
                                            </Border.Shadow>

                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <!-- Edit Button -->
                                                <Button Style="{StaticResource IconButtonStyle}"
                                                        Command="{Binding DataContext.EditPropertyCommand, ElementName=RootPage}"
                                                        CommandParameter="{Binding}"
                                                        ToolTipService.ToolTip="Bearbeiten"
                                                        Width="36"
                                                        Height="36"
                                                        Padding="0">
                                                    <FontIcon Glyph="&#xE70F;"
                                                              FontSize="16" />
                                                </Button>

                                                <!-- Delete Button -->
                                                <Button Style="{StaticResource IconButtonStyle}"
                                                        Command="{Binding DataContext.DeletePropertyCommand, ElementName=RootPage}"
                                                        CommandParameter="{Binding}"
                                                        ToolTipService.ToolTip="LÃ¶schen"
                                                        Width="36"
                                                        Height="36"
                                                        Padding="0">
                                                    <FontIcon Glyph="&#xE74D;"
                                                              FontSize="16"
                                                              Foreground="{ThemeResource ErrorBrush}" />
                                                </Button>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>

                    </utu:AutoLayout>
                </ScrollViewer>

            </Grid>

        </uc:BusyOverlay>

    </Grid>

</Page>
