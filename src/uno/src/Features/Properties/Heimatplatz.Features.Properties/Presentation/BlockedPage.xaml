<Page x:Class="Heimatplatz.Features.Properties.Presentation.BlockedPage"
      x:Name="RootPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Heimatplatz.Features.Properties.Presentation"
      xmlns:controls="using:Heimatplatz.Features.Properties.Controls"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:uc="using:UnoFramework.Controls"
      NavigationCacheMode="Disabled">

    <!--
    BlockedPage - User's Blocked Properties
    Zeigt alle blockierten Immobilien des eingeloggten Kaeufers
    Blockierte Immobilien werden aus der Hauptliste ausgeblendet
    -->

    <Grid Background="{ThemeResource BackgroundBrush}">

        <uc:BusyOverlay IsBusy="{Binding IsBusy}"
                        BusyMessage="{Binding BusyMessage}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0"
                        Background="{ThemeResource SurfaceBrush}"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="{utu:Responsive Narrowest='16,12', Normal='24,16'}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Title and selection count -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <TextBlock Text="{Binding PageTitle}"
                                       Style="{StaticResource TitleLargeTextBlockStyle}"
                                       FontWeight="SemiBold" />
                            <TextBlock Text="{Binding SelectedCountText}"
                                       Style="{StaticResource BodyMediumTextBlockStyle}"
                                       Foreground="{ThemeResource AccentBrush}"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding ShowBulkUnblockButton}" />
                        </StackPanel>

                        <!-- Action buttons -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    Visibility="{Binding IsNotEmpty}">
                            <!-- Bulk unblock button -->
                            <Button Content="Alle entblocken"
                                    Command="{Binding BulkUnblockCommand}"
                                    Background="{ThemeResource ErrorBrush}"
                                    Foreground="{ThemeResource ChipSelectedForegroundBrush}"
                                    Visibility="{Binding ShowBulkUnblockButton}"
                                    Padding="16,8"
                                    CornerRadius="{StaticResource ControlCornerRadius}" />

                            <!-- Selection mode toggle -->
                            <Button Content="{Binding SelectionModeButtonText}"
                                    Command="{Binding ToggleSelectionModeCommand}"
                                    Style="{StaticResource OutlinedButtonStyle}"
                                    Padding="16,8" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <ScrollViewer Grid.Row="1">
                    <utu:AutoLayout Orientation="Vertical"
                                    Spacing="16"
                                    Padding="{utu:Responsive Narrowest='16', Normal='24,24,24,40'}">

                        <!-- Empty State -->
                        <StackPanel Visibility="{Binding IsEmpty, FallbackValue=Collapsed}"
                                    Spacing="16"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Padding="0,80,0,0">

                            <FontIcon Glyph="{Binding EmptyStateIcon}"
                                      FontSize="64"
                                      Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                      HorizontalAlignment="Center" />

                            <TextBlock Text="{Binding EmptyStateTitle}"
                                       Style="{StaticResource TitleMediumTextBlockStyle}"
                                       Foreground="{ThemeResource OnSurfaceBrush}"
                                       HorizontalAlignment="Center" />

                            <TextBlock Text="{Binding EmptyStateDescription}"
                                       Style="{StaticResource BodyMediumTextBlockStyle}"
                                       Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       MaxWidth="400"
                                       Margin="0,0,0,24" />
                        </StackPanel>

                        <!-- Blocked Properties Grid -->
                        <ItemsRepeater ItemsSource="{Binding Properties}"
                                       Visibility="{Binding IsNotEmpty, FallbackValue=Collapsed}">
                            <ItemsRepeater.Layout>
                                <UniformGridLayout MinItemWidth="{utu:Responsive Narrowest=300, Normal=320, Wide=340}"
                                                   ItemsStretch="Fill"
                                                   MinRowSpacing="16"
                                                   MinColumnSpacing="16" />
                            </ItemsRepeater.Layout>

                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Grid Tapped="OnPropertyCardTapped">
                                        <!-- Property Card -->
                                        <controls:PropertyCard Property="{Binding}"
                                                               Margin="0" />

                                        <!-- Selection Toggle Button (visible in selection mode) -->
                                        <Button x:Name="SelectionButton"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Margin="8"
                                                Width="36"
                                                Height="36"
                                                Padding="0"
                                                CornerRadius="18"
                                                Command="{Binding DataContext.TogglePropertySelectionCommand, ElementName=RootPage}"
                                                CommandParameter="{Binding}"
                                                Visibility="{Binding DataContext.IsSelectionMode, ElementName=RootPage}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                                                    <Setter Property="Background" Value="{ThemeResource SurfaceBrush}" />
                                                    <Setter Property="BorderBrush" Value="{ThemeResource OutlineBrush}" />
                                                    <Setter Property="BorderThickness" Value="2" />
                                                </Style>
                                            </Button.Style>
                                            <FontIcon Glyph="&#xE739;"
                                                      FontSize="16"
                                                      Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                        </Button>

                                        <!-- Unblock Button Overlay (hidden in selection mode) -->
                                        <Border Background="{ThemeResource SurfaceBrush}"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                CornerRadius="{StaticResource ControlCornerRadius}"
                                                Margin="8"
                                                Padding="4"
                                                BorderBrush="{ThemeResource OutlineBrush}"
                                                BorderThickness="1"
                                                Visibility="{Binding DataContext.IsNotSelectionMode, ElementName=RootPage}">
                                            <Border.Shadow>
                                                <ThemeShadow />
                                            </Border.Shadow>

                                            <Button Style="{StaticResource IconButtonStyle}"
                                                    Command="{Binding DataContext.RemoveFromCollectionCommand, ElementName=RootPage}"
                                                    CommandParameter="{Binding}"
                                                    ToolTipService.ToolTip="Blockierung aufheben"
                                                    Width="36"
                                                    Height="36"
                                                    Padding="0">
                                                <FontIcon Glyph="&#xE711;"
                                                          FontSize="16"
                                                          Foreground="{ThemeResource OnSurfaceBrush}" />
                                            </Button>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>

                    </utu:AutoLayout>
                </ScrollViewer>

            </Grid>

        </uc:BusyOverlay>

    </Grid>

</Page>
