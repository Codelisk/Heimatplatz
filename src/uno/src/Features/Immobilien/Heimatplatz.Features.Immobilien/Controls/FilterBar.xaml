<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Heimatplatz.Features.Immobilien.Controls.FilterBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI">

    <Border
        Background="{ThemeResource BackgroundBrush}"
        Padding="16,12">

        <Grid ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Type Toggle Buttons - Pill Style -->
            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" CornerRadius="22" Height="40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Border
                        x:Name="HouseToggleBg"
                        Grid.Column="0"
                        Background="Black"
                        CornerRadius="20,0,0,20"
                        Padding="24,0"
                        MinWidth="80">
                        <TextBlock
                            x:Name="HouseToggleText"
                            Text="HOUSE"
                            FontSize="12"
                            CharacterSpacing="80"
                            FontWeight="SemiBold"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                    <Border
                        x:Name="LandToggleBg"
                        Grid.Column="1"
                        Background="Transparent"
                        CornerRadius="0,20,20,0"
                        Padding="24,0"
                        MinWidth="80">
                        <TextBlock
                            x:Name="LandToggleText"
                            Text="LAND"
                            FontSize="12"
                            CharacterSpacing="80"
                            FontWeight="SemiBold"
                            Foreground="Black"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                    <!-- Invisible buttons for click handling -->
                    <Button x:Name="HouseToggle" Grid.Column="0" Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0" />
                    <Button x:Name="LandToggle" Grid.Column="1" Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0" />
                </Grid>
            </Border>

            <!-- Price Range with Slider -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                <TextBlock
                    x:Name="PriceRangeText"
                    Text="€500K - €2.5M"
                    FontSize="13"
                    FontWeight="Medium"
                    HorizontalAlignment="Center" />
                <Grid Width="200" Height="20" VerticalAlignment="Center">
                    <!-- Slider Track Line -->
                    <Border
                        Height="2"
                        Background="Black"
                        VerticalAlignment="Center"
                        Margin="8,0" />
                    <!-- Min Handle -->
                    <Ellipse
                        x:Name="MinHandle"
                        Width="12"
                        Height="12"
                        Fill="Black"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="30,0,0,0" />
                    <!-- Max Handle -->
                    <Ellipse
                        x:Name="MaxHandle"
                        Width="12"
                        Height="12"
                        Fill="Black"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="150,0,0,0" />
                </Grid>
            </StackPanel>

            <!-- Location Search Box -->
            <Border
                Grid.Column="2"
                BorderBrush="Black"
                BorderThickness="1"
                MaxWidth="220"
                MinWidth="180"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <Grid Padding="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        x:Name="LocationSearchBox"
                        PlaceholderText="Berlin, Germany"
                        BorderThickness="0"
                        Background="Transparent"
                        FontSize="13"
                        Padding="0"
                        VerticalAlignment="Center" />
                    <FontIcon
                        Grid.Column="1"
                        Glyph="&#xE721;"
                        FontSize="16"
                        Foreground="Black"
                        VerticalAlignment="Center"
                        Margin="8,0,0,0" />
                </Grid>
            </Border>

            <!-- Surface Area -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                <TextBlock
                    Text="SURFACE AREA"
                    FontSize="11"
                    CharacterSpacing="80"
                    FontWeight="Medium"
                    VerticalAlignment="Center" />
                <Border BorderBrush="Black" BorderThickness="1" Height="40" MinWidth="60">
                    <TextBox
                        x:Name="MinAreaBox"
                        Width="50"
                        Text="150+"
                        BorderThickness="0"
                        Background="Transparent"
                        FontSize="13"
                        Padding="0"
                        TextAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                </Border>
                <TextBlock
                    Text="m²"
                    FontSize="13"
                    VerticalAlignment="Center" />
            </StackPanel>

        </Grid>

    </Border>

</UserControl>
