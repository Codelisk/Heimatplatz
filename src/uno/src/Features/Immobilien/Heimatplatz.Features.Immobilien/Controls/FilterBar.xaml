<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Heimatplatz.Features.Immobilien.Controls.FilterBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI">

    <Border
        Background="{ThemeResource BackgroundBrush}"
        BorderBrush="{ThemeResource OnSurfaceVariantBrush}"
        BorderThickness="0,0,0,1"
        Padding="16,12">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Type Toggle Buttons -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="0">
                <ToggleButton
                    x:Name="HouseToggle"
                    Content="HOUSE"
                    Padding="16,8"
                    Background="Black"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="0"
                    FontSize="12"
                    FontWeight="SemiBold"
                    IsChecked="True" />
                <ToggleButton
                    x:Name="LandToggle"
                    Content="LAND"
                    Padding="16,8"
                    Background="White"
                    Foreground="Black"
                    BorderBrush="Black"
                    BorderThickness="1,1,1,1"
                    CornerRadius="0"
                    FontSize="12"
                    FontWeight="SemiBold" />
            </StackPanel>

            <!-- Price Range -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0">
                <TextBlock
                    x:Name="PriceRangeText"
                    Text="€500K - €2.5M"
                    FontSize="14"
                    VerticalAlignment="Center"
                    Margin="0,0,16,0" />
                <Slider
                    x:Name="PriceSlider"
                    Width="200"
                    Minimum="0"
                    Maximum="5000000"
                    StepFrequency="50000"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!-- Location Search -->
            <TextBox
                Grid.Column="2"
                x:Name="LocationSearchBox"
                PlaceholderText="Ort suchen..."
                Margin="16,0"
                VerticalAlignment="Center"
                MaxWidth="300"
                HorizontalAlignment="Left" />

            <!-- Surface Area -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock
                    Text="SURFACE AREA"
                    FontSize="12"
                    Foreground="{ThemeResource OnSurfaceVariantBrush}"
                    VerticalAlignment="Center"
                    Margin="0,0,8,0" />
                <TextBox
                    x:Name="MinAreaBox"
                    Width="60"
                    PlaceholderText="150+"
                    VerticalAlignment="Center" />
                <TextBlock
                    Text="m²"
                    FontSize="12"
                    VerticalAlignment="Center"
                    Margin="4,0,0,0" />
            </StackPanel>

        </Grid>

    </Border>

</UserControl>
