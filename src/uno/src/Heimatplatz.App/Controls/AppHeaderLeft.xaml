<UserControl x:Class="Heimatplatz.App.Controls.AppHeaderLeft"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Heimatplatz.App.Controls"
             xmlns:utu="using:Uno.Toolkit.UI"
             xmlns:uen="using:Uno.Extensions.Navigation.UI">

    <!-- Left Header: Hamburger/Back Button + Logo/Title -->
    <StackPanel Orientation="Horizontal"
                VerticalAlignment="Center"
                AutomationProperties.AutomationId="AppHeaderLeft_Root">

        <!-- Hamburger Button (Menu Mode) -->
        <Button x:Name="HamburgerButton"
                Style="{StaticResource AppHeaderNavButtonStyle}"
                Padding="8"
                VerticalAlignment="Center"
                Visibility="{Binding IsMenuMode}"
                Command="{Binding ToggleNavigationPaneCommand}"
                AutomationProperties.AutomationId="AppHeaderLeft_HamburgerButton">
            <FontIcon Glyph="&#xE700;"
                      FontSize="20"
                      Foreground="{ThemeResource OnSurfaceBrush}" />
        </Button>

        <!-- Back Button (Normal Mode) -->
        <Button x:Name="BackButton"
                Style="{StaticResource AppHeaderNavButtonStyle}"
                Padding="8"
                VerticalAlignment="Center"
                Visibility="{Binding IsNormalMode}"
                Command="{Binding GoBackCommand}"
                AutomationProperties.AutomationId="AppHeaderLeft_BackButton">
            <FontIcon Glyph="&#xE72B;"
                      FontSize="20"
                      Foreground="{ThemeResource OnSurfaceBrush}" />
        </Button>

        <!-- Logo / Page Title -->
        <Button Style="{StaticResource AppHeaderNavButtonStyle}"
                Padding="0"
                MinHeight="0"
                Margin="4,0,0,0"
                VerticalAlignment="Center"
                uen:Navigation.Request="-/Home"
                AutomationProperties.AutomationId="AppHeaderLeft_LogoButton">
            <TextBlock x:Name="TitleText"
                       Text="{Binding CurrentTitle, FallbackValue='HEIMATPLATZ'}"
                       Style="{StaticResource AppHeaderLogoStyle}"
                       FontSize="{utu:Responsive Narrowest=12, Normal=15}"
                       CharacterSpacing="150"
                       VerticalAlignment="Center"
                       AutomationProperties.AutomationId="AppHeaderLeft_Title" />
        </Button>
    </StackPanel>
</UserControl>
