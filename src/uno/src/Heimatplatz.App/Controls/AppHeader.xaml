<UserControl x:Class="Heimatplatz.App.Controls.AppHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Heimatplatz.App.Controls"
             xmlns:utu="using:Uno.Toolkit.UI"
             xmlns:uen="using:Uno.Extensions.Navigation.UI">

    <UserControl.Resources>
        <!-- Logout MenuFlyout for authenticated users -->
        <MenuFlyout x:Key="LogoutMenuFlyout"
                    Placement="BottomEdgeAlignedRight">
            <MenuFlyout.MenuFlyoutPresenterStyle>
                <Style TargetType="MenuFlyoutPresenter">
                    <Setter Property="Background" Value="{ThemeResource SurfaceBrush}" />
                    <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}" />
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="Padding" Value="0,4" />
                    <Setter Property="CornerRadius" Value="{StaticResource RadiusMd}" />
                </Style>
            </MenuFlyout.MenuFlyoutPresenterStyle>
            <MenuFlyoutItem x:Name="LogoutMenuItem"
                            Text="Abmelden"
                            Command="{Binding LogoutCommand}"
                            AutomationProperties.AutomationId="AppHeader_LogoutMenuItem">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xF3B1;" FontSize="14" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
        </MenuFlyout>
    </UserControl.Resources>

    <!-- Gemeinsamer App-Header fuer alle Seiten -->
    <Border Background="{ThemeResource SurfaceBrush}"
            BorderBrush="{ThemeResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="{utu:Responsive Narrowest='4,10', Normal='8,12'}"
            AutomationProperties.AutomationId="AppHeader_Root">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Links: Hamburger Button (immer sichtbar) - toggled NavigationPane via Event -->
            <Button x:Name="HamburgerButton"
                    Grid.Column="0"
                    Style="{StaticResource AppHeaderNavButtonStyle}"
                    Padding="8"
                    VerticalAlignment="Center"
                    Command="{Binding ToggleNavigationPaneCommand}"
                    AutomationProperties.AutomationId="AppHeader_HamburgerButton">
                <FontIcon Glyph="&#xE700;"
                          FontSize="20"
                          Foreground="{ThemeResource OnSurfaceBrush}" />
            </Button>

            <!-- Logo / Page Title -->
            <Button Grid.Column="1"
                    Style="{StaticResource AppHeaderNavButtonStyle}"
                    Padding="0"
                    MinHeight="0"
                    Margin="4,0,0,0"
                    VerticalAlignment="Center"
                    uen:Navigation.Request="-/Home"
                    AutomationProperties.AutomationId="AppHeader_LogoButton">
                <TextBlock x:Name="TitleText"
                           Text="{Binding CurrentTitle, FallbackValue='HEIMATPLATZ'}"
                           Style="{StaticResource AppHeaderLogoStyle}"
                           FontSize="{utu:Responsive Narrowest=12, Normal=15}"
                           CharacterSpacing="150"
                           VerticalAlignment="Center"
                           AutomationProperties.AutomationId="AppHeader_Title" />
            </Button>

            <!-- Mittlerer Bereich: HeaderContent via PageHeaderChangedEvent -->
            <ContentPresenter Grid.Column="2"
                              Content="{Binding HeaderContent}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="8,0" />

            <!-- Rechte Seite: Auth Bereich -->
            <StackPanel Grid.Column="3"
                        Orientation="Horizontal"
                        Spacing="12"
                        VerticalAlignment="Center">

                <!-- Eingeloggt: User Profile Button -->
                <Button Visibility="{Binding IsAuthenticated}"
                        Style="{StaticResource AppHeaderNavButtonStyle}"
                        Flyout="{StaticResource LogoutMenuFlyout}"
                        Padding="8"
                        AutomationProperties.AutomationId="AppHeader_UserButton">
                    <FontIcon Glyph="&#xE77B;"
                              FontSize="20"
                              Foreground="{ThemeResource OnSurfaceBrush}" />
                </Button>

                <!-- Nicht eingeloggt: Anmelden + Registrieren -->
                <StackPanel Orientation="Horizontal"
                            Spacing="12"
                            Visibility="{Binding IsNotAuthenticated}"
                            AutomationProperties.AutomationId="AppHeader_AuthButtons">

                    <!-- Anmelden Button -->
                    <Button Content="Anmelden"
                            uen:Navigation.Request="Login"
                            Style="{StaticResource TextButtonStyle}"
                            FontSize="13"
                            Foreground="{ThemeResource OnSurfaceVariantBrush}"
                            Padding="8,6"
                            AutomationProperties.AutomationId="AppHeader_LoginButton" />

                    <!-- Registrieren Button (prominent) -->
                    <Button Content="Registrieren"
                            uen:Navigation.Request="Register"
                            Style="{StaticResource FilledButtonStyle}"
                            Background="{ThemeResource PrimaryButtonBackgroundBrush}"
                            Foreground="{ThemeResource PrimaryButtonForegroundBrush}"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Padding="12,8"
                            CornerRadius="{StaticResource RadiusSm}"
                            AutomationProperties.AutomationId="AppHeader_RegisterButton" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
