<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI">

    <!--
    ============================================================================
    RESPONSIVE LAYOUT STYLES
    ============================================================================
    Diese Styles nutzen {utu:Responsive} fuer automatische Anpassung an
    verschiedene Bildschirmgroessen.

    WICHTIG: xmlns:utu="using:Uno.Toolkit.UI" ist erforderlich!

    Breakpoints:
    - Narrowest: Phones
    - Narrow:    Kleine Tablets
    - Normal:    Standard (Default)
    - Wide:      Tablets/Desktop
    - Widest:    Grosse Monitore
    ============================================================================
    -->

    <!--
    ============================================================================
    RESPONSIVE PAGE STYLES
    ============================================================================
    -->

    <!-- Responsive Page Root - Hauptcontainer fuer Pages -->
    <Style x:Key="ResponsivePageRootStyle" TargetType="Grid">
        <Setter Property="Background" Value="{ThemeResource BackgroundBrush}" />
    </Style>

    <!-- Responsive Page Content - Content-Bereich mit responsivem Padding -->
    <Style x:Key="ResponsivePageContentStyle" TargetType="Grid">
        <Setter Property="Background" Value="{ThemeResource BackgroundBrush}" />
        <Setter Property="Padding"
                Value="{utu:Responsive Narrowest=16, Narrow=20, Normal=24, Wide=32, Widest=48}" />
    </Style>

    <!--
    ============================================================================
    RESPONSIVE STACK STYLES
    ============================================================================
    -->

    <!-- Responsive Content Stack - Standard Inhalts-Stack -->
    <Style x:Key="ResponsiveContentStackStyle" TargetType="StackPanel">
        <Setter Property="Spacing"
                Value="{utu:Responsive Narrowest=8, Narrow=12, Normal=16, Wide=20, Widest=24}" />
    </Style>

    <!-- Responsive Section Stack - Groessere Abstaende zwischen Sektionen -->
    <Style x:Key="ResponsiveSectionStackStyle" TargetType="StackPanel">
        <Setter Property="Spacing"
                Value="{utu:Responsive Narrowest=16, Narrow=20, Normal=24, Wide=32, Widest=48}" />
    </Style>

    <!-- Responsive Compact Stack - Enge Abstaende -->
    <Style x:Key="ResponsiveCompactStackStyle" TargetType="StackPanel">
        <Setter Property="Spacing"
                Value="{utu:Responsive Narrowest=4, Narrow=6, Normal=8, Wide=10, Widest=12}" />
    </Style>

    <!--
    ============================================================================
    RESPONSIVE CONTAINER STYLES
    ============================================================================
    -->

    <!-- Responsive Card - Karten mit responsivem Padding -->
    <Style x:Key="ResponsiveCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding"
                Value="{utu:Responsive Narrowest=12, Narrow=14, Normal=16, Wide=20, Widest=24}" />
    </Style>

    <!-- Responsive Card Subtle - Ohne Border -->
    <Style x:Key="ResponsiveCardSubtleStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SurfaceBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding"
                Value="{utu:Responsive Narrowest=12, Narrow=14, Normal=16, Wide=20, Widest=24}" />
    </Style>

    <!--
    ============================================================================
    RESPONSIVE SCROLLVIEWER STYLES
    ============================================================================
    -->

    <!-- Responsive Scrollable Content -->
    <Style x:Key="ResponsiveScrollableContentStyle" TargetType="ScrollViewer">
        <Setter Property="Padding"
                Value="{utu:Responsive Narrowest=16, Narrow=20, Normal=24, Wide=32, Widest=48}" />
    </Style>

    <!--
    ============================================================================
    USAGE EXAMPLES (nicht kompiliert - nur Dokumentation)
    ============================================================================

    1. INLINE RESPONSIVE WERTE:
       <Grid Padding="{utu:Responsive Narrowest=16, Normal=24, Wide=32}">

    2. VISIBILITY UMSCHALTEN:
       <Border Visibility="{utu:Responsive Narrowest=Collapsed, Normal=Visible}" />

    3. RESPONSIVE VIEW (Template-Switching):
       <utu:ResponsiveView>
           <utu:ResponsiveView.NarrowTemplate>
               <DataTemplate>Mobile Layout</DataTemplate>
           </utu:ResponsiveView.NarrowTemplate>
           <utu:ResponsiveView.WideTemplate>
               <DataTemplate>Desktop Layout</DataTemplate>
           </utu:ResponsiveView.WideTemplate>
       </utu:ResponsiveView>

    4. AUTOLAYOUT MIT RESPONSIVE:
       <utu:AutoLayout Orientation="Vertical"
                       Spacing="{utu:Responsive Narrowest=8, Normal=16, Wide=24}"
                       Padding="{utu:Responsive Narrowest=16, Normal=24}">
           <TextBlock Text="Title" />
           <Button Content="Action" />
       </utu:AutoLayout>

    5. ADAPTIVE TRIGGER (VSM - absteigend sortieren!):
       <VisualStateManager.VisualStateGroups>
           <VisualStateGroup>
               <VisualState x:Name="Wide">
                   <VisualState.StateTriggers>
                       <AdaptiveTrigger MinWindowWidth="1000"/>
                   </VisualState.StateTriggers>
               </VisualState>
               <VisualState x:Name="Normal">
                   <VisualState.StateTriggers>
                       <AdaptiveTrigger MinWindowWidth="600"/>
                   </VisualState.StateTriggers>
               </VisualState>
               <VisualState x:Name="Narrow">
                   <VisualState.StateTriggers>
                       <AdaptiveTrigger MinWindowWidth="0"/>
                   </VisualState.StateTriggers>
               </VisualState>
           </VisualStateGroup>
       </VisualStateManager.VisualStateGroups>
    ============================================================================
    -->

</ResourceDictionary>
