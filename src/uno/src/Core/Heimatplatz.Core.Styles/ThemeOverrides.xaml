<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    ============================================================================
    THEME OVERRIDES - Anpassbare Farbpalette
    ============================================================================

    Diese Datei ueberschreibt die WinUI/Fluent System-Farben.
    Aendere hier die Farben um dein eigenes Design zu erstellen.

    WICHTIG:
    - Definiere Farben fuer ALLE drei Themes: Light, Dark, HighContrast
    - Nutze {ThemeResource ...} in deinen Styles um diese Farben zu referenzieren
    - SystemAccentColor ist die primaere Akzentfarbe deiner App

    Dokumentation:
    - https://learn.microsoft.com/en-us/windows/apps/design/signature-experiences/color
    - https://learn.microsoft.com/en-us/windows/apps/develop/platform/xaml/xaml-theme-resources
    ============================================================================
    -->

    <ResourceDictionary.ThemeDictionaries>

        <!-- ================================================================
             LIGHT THEME - Heimatplatz Design System
             Minimalistisch Schwarz-Weiss fuer Immobilien OOe
             ================================================================ -->
        <ResourceDictionary x:Key="Light">

            <!-- Accent Color (Schwarz als Primaerfarbe) -->
            <Color x:Key="SystemAccentColor">#000000</Color>
            <Color x:Key="SystemAccentColorLight1">#1A1A1A</Color>
            <Color x:Key="SystemAccentColorLight2">#333333</Color>
            <Color x:Key="SystemAccentColorLight3">#4D4D4D</Color>
            <Color x:Key="SystemAccentColorDark1">#000000</Color>
            <Color x:Key="SystemAccentColorDark2">#000000</Color>
            <Color x:Key="SystemAccentColorDark3">#000000</Color>

            <!-- Accent Brushes -->
            <SolidColorBrush x:Key="SystemAccentColorBrush" Color="{StaticResource SystemAccentColor}" />
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource SystemAccentColor}" />

            <!-- Background Colors (Solides Weiss/Grau) -->
            <Color x:Key="SolidBackgroundFillColorBase">#FFFFFF</Color>
            <Color x:Key="SolidBackgroundFillColorSecondary">#F5F5F5</Color>
            <Color x:Key="SolidBackgroundFillColorTertiary">#EEEEEE</Color>

            <!-- Surface Colors (Weiss) -->
            <Color x:Key="LayerFillColorDefault">#FFFFFF</Color>
            <Color x:Key="LayerFillColorAlt">#FFFFFF</Color>
            <Color x:Key="CardBackgroundFillColorDefault">#FFFFFF</Color>
            <Color x:Key="CardBackgroundFillColorSecondary">#F8FAFC</Color>

            <!-- Text Colors (Slate Palette) -->
            <Color x:Key="TextFillColorPrimary">#0F172A</Color>
            <Color x:Key="TextFillColorSecondary">#334155</Color>
            <Color x:Key="TextFillColorTertiary">#64748B</Color>
            <Color x:Key="TextFillColorDisabled">#94A3B8</Color>

            <!-- Border/Stroke Colors -->
            <Color x:Key="ControlStrokeColorDefault">#E2E8F0</Color>
            <Color x:Key="ControlStrokeColorSecondary">#CBD5E1</Color>
            <Color x:Key="DividerStrokeColorDefault">#E2E8F0</Color>

            <!-- Semantic Colors -->
            <Color x:Key="SystemErrorColor">#DC2626</Color>
            <Color x:Key="SystemSuccessColor">#16A34A</Color>
            <Color x:Key="SystemWarningColor">#D97706</Color>
            <Color x:Key="SystemInfoColor">#2563EB</Color>

            <!-- Semantic Brushes -->
            <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource SystemErrorColor}" />
            <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SystemSuccessColor}" />
            <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource SystemWarningColor}" />
            <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource SystemInfoColor}" />

            <!-- App-Specific Semantic Brushes -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource SolidBackgroundFillColorBase}" />
            <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource LayerFillColorDefault}" />
            <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardBackgroundFillColorDefault}" />
            <SolidColorBrush x:Key="OnBackgroundBrush" Color="{StaticResource TextFillColorPrimary}" />
            <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource TextFillColorPrimary}" />
            <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="{StaticResource TextFillColorSecondary}" />
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource ControlStrokeColorDefault}" />
            <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerStrokeColorDefault}" />

            <!-- Heimatplatz-Spezifische Brushes -->
            <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="HeaderBorderBrush" Color="#E2E8F0" />
            <SolidColorBrush x:Key="ChipSelectedBackgroundBrush" Color="#000000" />
            <SolidColorBrush x:Key="ChipSelectedForegroundBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="ChipUnselectedBackgroundBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="ChipUnselectedForegroundBrush" Color="#334155" />
            <SolidColorBrush x:Key="ChipUnselectedBorderBrush" Color="#E2E8F0" />
            <SolidColorBrush x:Key="PrimaryButtonBackgroundBrush" Color="#000000" />
            <SolidColorBrush x:Key="PrimaryButtonForegroundBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="SecondaryButtonBackgroundBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="SecondaryButtonForegroundBrush" Color="#000000" />
            <SolidColorBrush x:Key="SecondaryButtonBorderBrush" Color="#CBD5E1" />
            <SolidColorBrush x:Key="PlaceholderBrush" Color="#E0E0E0" />
            <SolidColorBrush x:Key="SellerBadgeBackgroundBrush" Color="#F1F5F9" />
            <SolidColorBrush x:Key="SellerBadgeForegroundBrush" Color="#64748B" />
            <SolidColorBrush x:Key="PriceBrush" Color="#000000" />
            <SolidColorBrush x:Key="AddressBrush" Color="#666666" />
            <SolidColorBrush x:Key="DetailsBrush" Color="#999999" />

        </ResourceDictionary>

        <!-- ================================================================
             DARK THEME
             ================================================================ -->
        <ResourceDictionary x:Key="Dark">

            <!-- Accent Color (Primaere Markenfarbe) -->
            <Color x:Key="SystemAccentColor">#60CDFF</Color>
            <Color x:Key="SystemAccentColorLight1">#7AD5FF</Color>
            <Color x:Key="SystemAccentColorLight2">#93DDFF</Color>
            <Color x:Key="SystemAccentColorLight3">#ADE5FF</Color>
            <Color x:Key="SystemAccentColorDark1">#4DC4F7</Color>
            <Color x:Key="SystemAccentColorDark2">#3ABBEF</Color>
            <Color x:Key="SystemAccentColorDark3">#27B2E7</Color>

            <!-- Accent Brushes -->
            <SolidColorBrush x:Key="SystemAccentColorBrush" Color="{StaticResource SystemAccentColor}" />
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource SystemAccentColor}" />

            <!-- Background Colors -->
            <Color x:Key="SolidBackgroundFillColorBase">#202020</Color>
            <Color x:Key="SolidBackgroundFillColorSecondary">#1C1C1C</Color>
            <Color x:Key="SolidBackgroundFillColorTertiary">#282828</Color>

            <!-- Surface Colors -->
            <Color x:Key="LayerFillColorDefault">#2D2D2D</Color>
            <Color x:Key="LayerFillColorAlt">#333333</Color>
            <Color x:Key="CardBackgroundFillColorDefault">#2D2D2D</Color>
            <Color x:Key="CardBackgroundFillColorSecondary">#323232</Color>

            <!-- Text Colors -->
            <Color x:Key="TextFillColorPrimary">#FFFFFF</Color>
            <Color x:Key="TextFillColorSecondary">#C5C5C5</Color>
            <Color x:Key="TextFillColorTertiary">#9A9A9A</Color>
            <Color x:Key="TextFillColorDisabled">#6D6D6D</Color>

            <!-- Border/Stroke Colors -->
            <Color x:Key="ControlStrokeColorDefault">#4D4D4D</Color>
            <Color x:Key="ControlStrokeColorSecondary">#404040</Color>
            <Color x:Key="DividerStrokeColorDefault">#3D3D3D</Color>

            <!-- Semantic Colors -->
            <Color x:Key="SystemErrorColor">#FF99A4</Color>
            <Color x:Key="SystemSuccessColor">#6CCB5F</Color>
            <Color x:Key="SystemWarningColor">#FCE100</Color>
            <Color x:Key="SystemInfoColor">#60CDFF</Color>

            <!-- Semantic Brushes -->
            <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource SystemErrorColor}" />
            <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SystemSuccessColor}" />
            <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource SystemWarningColor}" />
            <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource SystemInfoColor}" />

            <!-- App-Specific Semantic Brushes -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource SolidBackgroundFillColorBase}" />
            <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource LayerFillColorDefault}" />
            <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardBackgroundFillColorDefault}" />
            <SolidColorBrush x:Key="OnBackgroundBrush" Color="{StaticResource TextFillColorPrimary}" />
            <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource TextFillColorPrimary}" />
            <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="{StaticResource TextFillColorSecondary}" />
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource ControlStrokeColorDefault}" />
            <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerStrokeColorDefault}" />

            <!-- Heimatplatz-Spezifische Brushes (Dark) -->
            <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#2D2D2D" />
            <SolidColorBrush x:Key="HeaderBorderBrush" Color="#4D4D4D" />
            <SolidColorBrush x:Key="ChipSelectedBackgroundBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="ChipSelectedForegroundBrush" Color="#000000" />
            <SolidColorBrush x:Key="ChipUnselectedBackgroundBrush" Color="#2D2D2D" />
            <SolidColorBrush x:Key="ChipUnselectedForegroundBrush" Color="#C5C5C5" />
            <SolidColorBrush x:Key="ChipUnselectedBorderBrush" Color="#4D4D4D" />
            <SolidColorBrush x:Key="PrimaryButtonBackgroundBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="PrimaryButtonForegroundBrush" Color="#000000" />
            <SolidColorBrush x:Key="SecondaryButtonBackgroundBrush" Color="#2D2D2D" />
            <SolidColorBrush x:Key="SecondaryButtonForegroundBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="SecondaryButtonBorderBrush" Color="#4D4D4D" />
            <SolidColorBrush x:Key="PlaceholderBrush" Color="#404040" />
            <SolidColorBrush x:Key="SellerBadgeBackgroundBrush" Color="#333333" />
            <SolidColorBrush x:Key="SellerBadgeForegroundBrush" Color="#9A9A9A" />
            <SolidColorBrush x:Key="PriceBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="AddressBrush" Color="#C5C5C5" />
            <SolidColorBrush x:Key="DetailsBrush" Color="#9A9A9A" />

        </ResourceDictionary>

        <!-- ================================================================
             HIGH CONTRAST THEME
             Nutzt SystemColor-Ressourcen fuer Barrierefreiheit
             ================================================================ -->
        <ResourceDictionary x:Key="HighContrast">

            <!-- High Contrast nutzt System-Farben - NICHT aendern! -->
            <SolidColorBrush x:Key="AccentBrush" Color="{ThemeResource SystemColorHighlightColor}" />
            <SolidColorBrush x:Key="BackgroundBrush" Color="{ThemeResource SystemColorWindowColor}" />
            <SolidColorBrush x:Key="SurfaceBrush" Color="{ThemeResource SystemColorWindowColor}" />
            <SolidColorBrush x:Key="CardBrush" Color="{ThemeResource SystemColorWindowColor}" />
            <SolidColorBrush x:Key="OnBackgroundBrush" Color="{ThemeResource SystemColorWindowTextColor}" />
            <SolidColorBrush x:Key="OnSurfaceBrush" Color="{ThemeResource SystemColorWindowTextColor}" />
            <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="{ThemeResource SystemColorGrayTextColor}" />
            <SolidColorBrush x:Key="BorderBrush" Color="{ThemeResource SystemColorWindowTextColor}" />
            <SolidColorBrush x:Key="DividerBrush" Color="{ThemeResource SystemColorWindowTextColor}" />
            <SolidColorBrush x:Key="ErrorBrush" Color="{ThemeResource SystemColorHighlightColor}" />
            <SolidColorBrush x:Key="SuccessBrush" Color="{ThemeResource SystemColorHighlightColor}" />
            <SolidColorBrush x:Key="WarningBrush" Color="{ThemeResource SystemColorHighlightColor}" />
            <SolidColorBrush x:Key="InfoBrush" Color="{ThemeResource SystemColorHighlightColor}" />

            <!-- Heimatplatz-Spezifische Brushes (HighContrast) -->
            <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{ThemeResource SystemColorWindowColor}" />
            <SolidColorBrush x:Key="HeaderBorderBrush" Color="{ThemeResource SystemColorWindowTextColor}" />
            <SolidColorBrush x:Key="ChipSelectedBackgroundBrush" Color="{ThemeResource SystemColorHighlightColor}" />
            <SolidColorBrush x:Key="ChipSelectedForegroundBrush" Color="{ThemeResource SystemColorHighlightTextColor}" />
            <SolidColorBrush x:Key="ChipUnselectedBackgroundBrush" Color="{ThemeResource SystemColorWindowColor}" />
            <SolidColorBrush x:Key="ChipUnselectedForegroundBrush" Color="{ThemeResource SystemColorWindowTextColor}" />
            <SolidColorBrush x:Key="ChipUnselectedBorderBrush" Color="{ThemeResource SystemColorWindowTextColor}" />
            <SolidColorBrush x:Key="PrimaryButtonBackgroundBrush" Color="{ThemeResource SystemColorHighlightColor}" />
            <SolidColorBrush x:Key="PrimaryButtonForegroundBrush" Color="{ThemeResource SystemColorHighlightTextColor}" />
            <SolidColorBrush x:Key="SecondaryButtonBackgroundBrush" Color="{ThemeResource SystemColorWindowColor}" />
            <SolidColorBrush x:Key="SecondaryButtonForegroundBrush" Color="{ThemeResource SystemColorWindowTextColor}" />
            <SolidColorBrush x:Key="SecondaryButtonBorderBrush" Color="{ThemeResource SystemColorWindowTextColor}" />
            <SolidColorBrush x:Key="PlaceholderBrush" Color="{ThemeResource SystemColorGrayTextColor}" />
            <SolidColorBrush x:Key="SellerBadgeBackgroundBrush" Color="{ThemeResource SystemColorWindowColor}" />
            <SolidColorBrush x:Key="SellerBadgeForegroundBrush" Color="{ThemeResource SystemColorGrayTextColor}" />
            <SolidColorBrush x:Key="PriceBrush" Color="{ThemeResource SystemColorWindowTextColor}" />
            <SolidColorBrush x:Key="AddressBrush" Color="{ThemeResource SystemColorGrayTextColor}" />
            <SolidColorBrush x:Key="DetailsBrush" Color="{ThemeResource SystemColorGrayTextColor}" />

        </ResourceDictionary>

    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
