<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Heimatplatz.Core.Controls.Controls.AppFooter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI">

    <Border
        Background="{ThemeResource BackgroundBrush}"
        Padding="{utu:Responsive Narrowest='8,16', Narrow='12,24', Normal='16,32'}">

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="{utu:Responsive Narrowest=8, Narrow=16, Normal=32}">
            <HyperlinkButton x:Name="ImpressumButton" Padding="{utu:Responsive Narrowest='4,4', Normal='8,4'}">
                <TextBlock Text="IMPRESSUM" FontSize="{utu:Responsive Narrowest=9, Normal=11}" CharacterSpacing="{utu:Responsive Narrowest=40, Normal=100}" FontWeight="SemiBold" Foreground="Black" />
            </HyperlinkButton>

            <HyperlinkButton x:Name="DatenschutzButton" Padding="{utu:Responsive Narrowest='4,4', Normal='8,4'}">
                <TextBlock Text="DATENSCHUTZ" FontSize="{utu:Responsive Narrowest=9, Normal=11}" CharacterSpacing="{utu:Responsive Narrowest=40, Normal=100}" FontWeight="SemiBold" Foreground="Black" />
            </HyperlinkButton>

            <HyperlinkButton x:Name="KontaktButton" Padding="{utu:Responsive Narrowest='4,4', Normal='8,4'}">
                <TextBlock Text="KONTAKT" FontSize="{utu:Responsive Narrowest=9, Normal=11}" CharacterSpacing="{utu:Responsive Narrowest=40, Normal=100}" FontWeight="SemiBold" Foreground="Black" />
            </HyperlinkButton>
        </StackPanel>

    </Border>

</UserControl>
