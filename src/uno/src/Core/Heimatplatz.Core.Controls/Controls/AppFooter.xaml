<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Heimatplatz.Core.Controls.Controls.AppFooter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI">

    <Border
        Background="{ThemeResource SurfaceBrush}"
        BorderBrush="{ThemeResource OnSurfaceVariantBrush}"
        BorderThickness="0,1,0,0"
        Padding="16,24">

        <StackPanel HorizontalAlignment="Center" Spacing="16">

            <!-- Links -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="24">
                <Button
                    x:Name="ImpressumButton"
                    Content="IMPRESSUM"
                    Background="Transparent"
                    Foreground="{ThemeResource OnSurfaceBrush}"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Padding="8,4"
                    BorderThickness="0" />

                <Button
                    x:Name="DatenschutzButton"
                    Content="DATENSCHUTZ"
                    Background="Transparent"
                    Foreground="{ThemeResource OnSurfaceBrush}"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Padding="8,4"
                    BorderThickness="0" />

                <Button
                    x:Name="KontaktButton"
                    Content="KONTAKT"
                    Background="Transparent"
                    Foreground="{ThemeResource OnSurfaceBrush}"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Padding="8,4"
                    BorderThickness="0" />
            </StackPanel>

            <!-- Copyright -->
            <TextBlock
                Text="Â© 2025 HEIMATPLATZ REAL ESTATE"
                FontSize="10"
                Foreground="{ThemeResource OnSurfaceVariantBrush}"
                HorizontalAlignment="Center" />

        </StackPanel>

    </Border>

</UserControl>
