<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Heimatplatz.Core.Controls.Controls.PropertyCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI">

    <Border
        x:Name="RootBorder"
        Background="{ThemeResource CardBrush}"
        CornerRadius="0"
        Translation="0,0,8">
        <Border.Shadow>
            <ThemeShadow />
        </Border.Shadow>

        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Image -->
            <Grid Grid.Row="0">
                <Image
                    x:Name="PropertyImage"
                    Stretch="UniformToFill"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
                <!-- Placeholder when no image -->
                <Border
                    x:Name="ImagePlaceholder"
                    Background="{ThemeResource SurfaceBrush}"
                    Visibility="Collapsed">
                    <FontIcon
                        Glyph="&#xE8B9;"
                        FontSize="48"
                        Foreground="{ThemeResource OnSurfaceVariantBrush}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Border>
            </Grid>

            <!-- Location Title -->
            <TextBlock
                Grid.Row="1"
                x:Name="LocationText"
                FontWeight="Bold"
                FontSize="14"
                Margin="12,12,12,8"
                TextTrimming="CharacterEllipsis"
                MaxLines="1" />

            <!-- Stats Row -->
            <Grid Grid.Row="2" Margin="12,0,12,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Price -->
                <Border
                    Grid.Column="0"
                    Background="{ThemeResource SurfaceBrush}"
                    Padding="8,4"
                    Margin="0,0,8,0">
                    <TextBlock
                        x:Name="PriceText"
                        FontSize="12"
                        FontWeight="SemiBold" />
                </Border>

                <!-- Area -->
                <Border
                    Grid.Column="1"
                    Background="{ThemeResource SurfaceBrush}"
                    Padding="8,4"
                    Margin="0,0,8,0">
                    <TextBlock
                        x:Name="AreaText"
                        FontSize="12" />
                </Border>

                <!-- Extra Info (Rooms or Plot) -->
                <Border
                    Grid.Column="2"
                    Background="{ThemeResource SurfaceBrush}"
                    Padding="8,4"
                    HorizontalAlignment="Left">
                    <TextBlock
                        x:Name="ExtraInfoText"
                        FontSize="12" />
                </Border>
            </Grid>

        </Grid>

    </Border>

</UserControl>
