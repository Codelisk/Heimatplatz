<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Heimatplatz.Core.Controls.Controls.PropertyCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI">

    <Border
        x:Name="RootBorder"
        Background="{ThemeResource BackgroundBrush}"
        CornerRadius="0">

        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Image -->
            <Grid Grid.Row="0">
                <Image
                    x:Name="PropertyImage"
                    Stretch="UniformToFill"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
                <!-- Placeholder when no image -->
                <Border
                    x:Name="ImagePlaceholder"
                    Background="#F0F0F0"
                    Visibility="Collapsed">
                    <FontIcon
                        Glyph="&#xE8B9;"
                        FontSize="48"
                        Foreground="#CCCCCC"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Border>
            </Grid>

            <!-- Location Title -->
            <TextBlock
                Grid.Row="1"
                x:Name="LocationText"
                FontWeight="Bold"
                FontSize="11"
                CharacterSpacing="30"
                Margin="0,10,0,8"
                TextTrimming="CharacterEllipsis"
                MaxLines="1" />

            <!-- Stats Row -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="6" Margin="0,0,0,4">
                <!-- Price -->
                <Border
                    Background="#F0F0F0"
                    Padding="10,6">
                    <TextBlock
                        x:Name="PriceText"
                        FontSize="11"
                        FontWeight="SemiBold" />
                </Border>

                <!-- Area -->
                <Border
                    Background="#F0F0F0"
                    Padding="10,6">
                    <TextBlock
                        x:Name="AreaText"
                        FontSize="11" />
                </Border>

                <!-- Extra Info (Rooms or Plot) -->
                <Border
                    Background="#F0F0F0"
                    Padding="10,6">
                    <TextBlock
                        x:Name="ExtraInfoText"
                        FontSize="11" />
                </Border>
            </StackPanel>

        </Grid>

    </Border>

</UserControl>
