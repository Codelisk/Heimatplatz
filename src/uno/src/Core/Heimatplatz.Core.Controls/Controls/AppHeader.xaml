<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Heimatplatz.Core.Controls.Controls.AppHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI">

    <Grid Height="60" Background="{ThemeResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Logo -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
            <Border Width="20" Height="20" Background="Black" Margin="0,0,8,0" />
            <TextBlock
                Text="HEIMATPLATZ"
                FontWeight="Bold"
                FontSize="18"
                VerticalAlignment="Center"
                Style="{StaticResource TitleTextBlockStyle}" />
        </StackPanel>

        <!-- Object Count -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
            <TextBlock
                Text="OBJECTS:"
                FontSize="12"
                Foreground="{ThemeResource OnSurfaceVariantBrush}"
                VerticalAlignment="Center"
                Margin="0,0,4,0" />
            <TextBlock
                x:Name="ObjectCountText"
                FontSize="12"
                FontWeight="SemiBold"
                VerticalAlignment="Center" />
        </StackPanel>

        <!-- Account Button -->
        <Button
            Grid.Column="3"
            x:Name="AccountButton"
            Content="ACCOUNT"
            Margin="8,0,16,0"
            Padding="16,8"
            Background="Transparent"
            BorderBrush="Black"
            BorderThickness="1"
            FontSize="12"
            FontWeight="SemiBold" />

    </Grid>

</UserControl>
